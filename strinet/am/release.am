	 $(ECHO) "Copyright (c) 1997-2000  Brian Bidulock <bidulock@openss7.org>" >> $@ ;\
	 $(ECHO) "See the end for copying conditions (for this file)." >> $@ ;\
	 $(ECHO) -e "\f" >> $@ ;\
	 $(ECHO) "The following is an extract from the manual to assist CVS developers:" >> $@ ;\
	 $(ECHO) "" >> $@ ;\
	 cat MANUAL | sed -e '\|^[0-9].[0-9].[0-9] Downloading from CVS|,\|^[0-9].[0-9] Configuration|!d;\|^[0-9].[0-9] Configuration|,$$d' >> $@ ;\
	 cat $(srcdir)/AUTHORS | sed -e '\|^-----|,$$!d' >> $@

