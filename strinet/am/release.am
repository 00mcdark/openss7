	 $(ECHO) "$$idline" >> $@ ; \
	 $(ECHO) "Copyright (c) 2001-`date +%Y`  OpenSS7 Corporation. <http://www.openss7.com/>" >> $@ ;\
	 $(ECHO) "Copyright (c) 1997-2000  Brian Bidulock <bidulock@openss7.org>" >> $@ ;\
	 $(ECHO) "See the end for copying conditions (for this file)." >> $@ ;\
	 $(ECHO) -e "\f" >> $@ ;\
	 $(ECHO) "The following is an extract from the manual to assist NexusWare developers:" >> $@ ;\
	 $(ECHO) "" >> $@ ;\
	 cat MANUAL | sed -e '\|^[0-9].[0-9].[0-9] Building from the Tar Ball|,\|^[0-9].[0-9] Installing|!d;\|^[0-9].[0-9] Installing|,$$d' >> $@ ;\
	 cat $(srcdir)/AUTHORS | sed -e '\|^-----|,$$!d' >> $@

$(srcdir)/README-alpha: MANUAL $(srcdir)/AUTHORS
	@$(ECHO) "Creating $@ from the MANUAL..." ;\
	 reltype=`grep '^This software is' MANUAL | cut -f4 '-d '` ; \
	 idline='\$$Id\$$' ; if test -e $@ ; then if grep '^\$$Id' $@ >/dev/null 2>&1 ; then idline=`grep '^\$$Id' $@ | head -1` ; fi ; fi ; \
	 $(ECHO) "$(PACKAGE_TITLE) -- $$reltype release introduction.  $(PACKAGE_DATE)" > $@ ;\
	 $(ECHO) "$$idline" >> $@ ; \
	 $(ECHO) "Copyright (c) 2001-`date +%Y`  OpenSS7 Corporation. <http://www.openss7.com/>" >> $@ ;\
	 $(ECHO) "Copyright (c) 1997-2000  Brian Bidulock <bidulock@openss7.org>" >> $@ ;\
	 $(ECHO) "See the end for copying conditions (for this file)." >> $@ ;\
	 $(ECHO) -e "\f" >> $@ ;\
	 $(ECHO) "$(PACKAGE_TITLE)" >> $@ ;\
	 $(ECHO) "$(PACKAGE_TITLE)" | sed -e 's,.,=,g' >> $@ ;\
	 $(ECHO) "" >> $@ ;\
	 $(ECHO) "Package $(PACKAGE)-$(VERSION) Released $(PACKAGE_DATE)." >> $@ ;\
	 $(ECHO) "" >> $@ ;\
	 $(ECHO) "This is $$reltype release software." >> $@ ;\
	 $(ECHO) "" >> $@ ;\
	 $(ECHO) "The following is an extract from the Installation and Reference Manual:" >> $@ ;\
	 $(ECHO) "" >> $@ ;\
	 cat MANUAL | sed -e '\|^[0-9].[0-9] Bugs|,\|^[0-9] Installation|!d;\|^[0-9] Installation|,$$d' >> $@ ;\
	 case $$reltype in \
		 (pre-alpha)  cat MANUAL | sed -e '\|^[0-9].[0-9].[0-9] Pre-Alpha Releases|,\|^[0-9].[0-9].[0-9] Alpha Releases|!d;\|^[0-9].[0-9].[0-9] Alpha Releases|,$$d' >> $@ ;; \
		 (alpha)      cat MANUAL | sed -e '\|^[0-9].[0-9].[0-9] Alpha Releases|,\|^[0-9].[0-9].[0-9] Beta Releases|!d;\|^[0-9].[0-9].[0-9] Beta Releases|,$$d' >> $@ ;; \
		 (beta)       cat MANUAL | sed -e '\|^[0-9].[0-9].[0-9] Beta Releases|,\|^[0-9].[0-9].[0-9] Gamma Releases|!d;\|^[0-9].[0-9].[0-9] Gamma Releases|,$$d' >> $@ ;; \
		 (gamma)      cat MANUAL | sed -e '\|^[0-9].[0-9].[0-9] Gamma Releases|,\|^[0-9].[0-9].[0-9] Production Releases|!d;\|^[0-9].[0-9].[0-9] Production Releases|,$$d' >> $@ ;; \
		 (production) cat MANUAL | sed -e '\|^[0-9].[0-9].[0-9] Production Releases|,\|^[0-9].[0-9].[0-9] Unstable Releases|!d;\|^[0-9].[0-9].[0-9] Unstable Releases|,$$d' >> $@ ;; \
		 (unstable)   cat MANUAL | sed -e '\|^[0-9].[0-9].[0-9] Unstable Releases|,\|^[0-9].[0-9] Bugs|!d;\|^[0-9].[0-9] Bugs|,$$d' >> $@ ;; \
		 (*)          cat MANUAL | sed -e '\|^[0-9].[0-9] Maturity|,\|^[0-9].[0-9] Bugs|!d;\|^[0-9].[0-9] Bugs|,$$d' >> $@ ;; \
	 esac ; \
	 cat $(srcdir)/AUTHORS | sed -e '\|^-----|,$$!d' >> $@

ALL_LOCAL			+= $(srcdir)/NEWS \
				   $(srcdir)/README \
				   $(srcdir)/README-alpha \
				   $(srcdir)/README-cvs \
				   $(srcdir)/README-nexusware

## MAINTAINER_MODE
endif

