@mscript_header@

function remove_dev_prerm() { :
    if test -x '/usr/sbin/@STRMAKENODES@' ; then
	# ensure that old devices are removed
	echo "@PACKAGE@-${subpkg}(@VERSION@-@PACKAGE_DEBRELEASE@): removing old devices."
	/usr/sbin/@STRMAKENODES@ --remove
    fi
}

function conflict_dev_prerm() { :
    if test -x '/usr/sbin/@STRMAKENODES@' ; then
	# ensure that devices are removed
	echo "@PACKAGE@-${subpkg}(@VERSION@-@PACKAGE_DEBRELEASE@): removing devices."
	/usr/sbin/@STRMAKENODES@ --remove
    fi
}

function upgrade_dev_prerm() { :
    if test -x '/usr/sbin/@STRMAKENODES@' ; then
	# ensure that old devices are removed
	echo "@PACKAGE@-${subpkg}(@VERSION@-@PACKAGE_DEBRELEASE@): removing old devices."
	/usr/sbin/@STRMAKENODES@ --remove
    fi
}

function failed_upgrade_dev_prerm() { :
    if test -x '/usr/sbin/@STRMAKENODES@' ; then
	# ensure that old devices are put back
	echo "@PACKAGE@-${subpkg}(@VERSION@-@PACKAGE_DEBRELEASE@): restoring old devices."
	/usr/sbin/@STRMAKENODES@
    fi
}

function deconfigure_dev_prerm() { :
    if test -x '/usr/sbin/@STRMAKENODES@' ; then
	# ensure that devices are removed
	echo "@PACKAGE@-${subpkg}(@VERSION@-@PACKAGE_DEBRELEASE@): removing devices."
	/usr/sbin/@STRMAKENODES@ --remove
    fi
}

subpkg=dev

@mscript_prerm@

