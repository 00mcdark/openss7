subpkg=lib
@mscript_header@
datarootdir=@datarootdir@
#
# preinst_libraries() - On a fresh installation, look for an remove any non-deb
#   or old tarball release libraries.  On reinstallations this step can (and
#   should) be skipped.  Unfortunately, non-autoconf releases of LiS placed
#   libraries all over the place.  On an initial installation, this checks for
#   other libraries with the same name and deletes them.
#
preinst_libraries () {
    local old_libs
    for lib in $libraries ; do
        old_libs="`( /sbin/ldconfig -p | grep '\<lib'$lib'\>' | cut '-d ' -f4 ) 2>/dev/null`"
        if [ -n "$old_libs" ] ; then
            echo "$script: warning: Deleting old non-deb libraries $old_libs" >&2
            rm -f $old_libs || true
        fi
    done
    :
    return 0
}
#
# preinst_tools() - On a fresh installation, look for and remove any non-deb or
#   old tarball release tools.  On reinstallations this step can (and should) be
#   skipped.
#
preinst_tools () {
    local tool location
    for tool in $tools ; do
        location="`which $tool 2>/dev/null`"
        while [ -n "$location" -a -x "$location" ] ; do
	    echo "$script: warning: Deleting old non-deb tool $location" >&2
            rm -f -- $location || true
            location="`which $tool 2>/dev/null`"
        done
    done
    :
    return 0
}
#
# preinst_lib_install() - On a fresh installation, look for and remove any
#   conflicting non-deb or old tarball release tools and libraries.  On
#   reinstallations this step can (and should) be skipped.
#
preinst_lib_install () { :
    preinst_libraries
    preinst_tools
}
preinst_lib_reinstall () { :
}
# -----------------------------------------------------------------------------
# Primary functions:
# -----------------------------------------------------------------------------
# new-preinst install
install_preinst () { :
    preinst_lib_install
}
# new-preinst install old-version
reinstall_preinst () { :
    preinst_lib_reinstall
}
# new-preinst upgrade old-version
upgrade_preinst () { :
    preinst_lib_reinstall
}
# old-postrm upgrade new-version ...FAILED
# new-postrm failed-upgrade old-version ...FAILED
# old-preinst abort-upgrade new-version
abort_upgrade_preinst () { :
    preinst_lib_reinstall
}
@mscript_preinst@
@mscript_debhelper@
