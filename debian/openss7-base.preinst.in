@mscript_header@

install_init_preinst_preloads() {
    case $kversion in
	2.4.*) prel_old=$sysconfdir/modules ;;
	2.6.*) prel_old=$sysconfdir/modprobe.preload ;;
        *) return ;;
    esac
    if test -f $prel_old; then
        prel_tmp=$tmppath/modprobe.preload.tmp.$$
        prel_new=$tmppath/modprobe.preload.new.$$
        cp -f -- $prel_old $prel_new
	sed -r -e '/^[[:space:]]*(specfs|streams)/d' $prel_new > $prel_tmp
        mv -f -- $prel_tmp $prel_new
        chmod --reference=$prel_old -- $prel_new
        cp -f -b --suffix=.rpmsave -- $prel_new $prel_old
        rm -f -- $prel_new
    fi
}

install_init_preinst_initscripts() {
    # Fresh install, go looking for non-rpm initscripts and remove them.
    list="$inifiles $nonrpminit"; for i in $list; do
	if test -f $initrddir/$i ; then
            # Find the best working init script removal tool
            test -x /sbin/insserv             && /sbin/insserv -r          $i 2>&1 && continue || :
            test -x /sbin/chkconfig           && /sbin/chkconfig --del     $i 2>&1 && continue || :
            test -x /usr/lib/lsb/remove_initd && /usr/lib/lsb/remove_initd $i 2>&1 && continue || :
	fi
    done
}

# -----------------------------------------------------------------------------
# Primary functions:
# -----------------------------------------------------------------------------
#
# This is an initial installation of the base subpackage.  We need to check for
# non-dpkg installations on the host and remove any entries that might later
# conflict with our entries.  We treat every fresh installation like an upgrade
# from non-dpkg install.
#
install_init_preinst() {
    install_init_preinst_preloads
    install_init_preinst_initscripts
}

#
# This is our chance to check that an old-prerm upgrade scriptlet did at least
# somewhat what it was supposed to do.  This is not as extensive as the non-dpkg
# install since we do not have to check that package files are removed and we
# don't have to check for things from non-dpkg versions.
#
upgrade_init_preinst() {
	# Because we are doing an upgrade, the prerm and postrm scripts for the
	# old deb are going to be called.  Hopefully the old deb can handle
	# removal correctly.
}

subpkg=init

@mscript_preinst@

