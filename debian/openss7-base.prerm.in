subpkg=base
@openss7_header@
datarootdir=@datarootdir@
# -----------------------------------------------------------------------------
# Auxiliary functions:
# -----------------------------------------------------------------------------
#
# prerm_initscripts() - Before removing a package, stop the init scripts and deregister them.
#   Because this is too disruptive for weak-updated systems on upgrade, we disable the debhelper
#   scriplets and only stop init scripts on complete removal.
#
prerm_initscripts () {
    local list reverse i
    list="${initfiles}"
    reverse=
    for i in $list; do
	reverse="$i${reverse:+ }$reverse"
    done
    for i in $reverse; do
	if [ -f @initrddir@/$i ]; then
	    [ -x "`which invoke-rc.d 2>/dev/null`" ] && { invoke-rc.d $i stop && continue || true; }
	    [ -x "`which service     2>/dev/null`" ] && { service     $i stop && continue || true; }
	    [ -x @initrddir@/$i                    ] && { @initrddir@/$i stop && continue || true; }
	fi
    done
    for i in $reverse; do
	if [ -f @initrddir@/$i ]; then
	    [ -x /sbin/insserv             ] && { /sbin/insserv -r          $i        2>&1 && continue || :; }
	    [ -x /sbin/chkconfig           ] && { /sbin/chkconfig --del     $i        2>&1 && continue || :; }
	    [ -x /usr/lib/lsb/remove_initd ] && { /usr/lib/lsb/remove_initd $i        2>&1 && continue || :; }
	    [ -x /usr/sbin/update-rc.d     ] && { /usr/bin/update-rc.d      $i remove 2>&1 && continue || :; }
	fi
    done
    :
}
prerm_manrefs () { :
    for m in $manrefs; do
	rm -f -- @mandir@/$m 2>/dev/null || :
    done
}
prerm_manmacros () { :
    for m in $manmacros; do
	rm -f -- @mandir@/$m 2>/dev/null || :
    done
}
#
# prerm_base_remove() - Remove the -base subpackage completely.  No upgrade is in processes.
#
prerm_base_remove () { :
    # We are being removed for good.
    @WITH_KO_MODULES_FALSE@prerm_initscripts
    prerm_manrefs
    prerm_manmacros
}
prerm_base_upgrade () { :
    # We are being removed because we are being replaced with a newer version.
    @WITH_KO_MODULES_FALSE@prerm_initscripts
}
# -----------------------------------------------------------------------------
# Primary functions:
# -----------------------------------------------------------------------------
# xxx-prerm remove
remove_prerm () { :
    prerm_base_remove
}
# con-prerm remove 'in-favour' package new-version
conflict_prerm () { :
    prerm_base_remove
}
# old-prerm upgrade new-version
upgrade_prerm () { :
    prerm_base_upgrade
}
# old-prerm upgrade new-version ***FAILED***
# new-prerm failed-upgrade old-version
failed_upgrade_prerm () { :
    prerm_base_upgrade
}
# dec-prerm deconfigure 'in-favour' package-being-installed version ['removing' conflicting-package version]
deconfigure_prerm () { :
    prerm_base_upgrade
}
@mscript_prerm@
@mscript_debhelper@
