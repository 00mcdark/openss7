# -----------------------------------------------------------------------------
# Auxiliary functions:
# -----------------------------------------------------------------------------
#
# prerm_rmnods() - Remove STREAMS devices generated by STRCONF.  Note that this
#   is a shell script that does not require any STREAMS libraries to be present
#   and so can be called regardless of whether the -lib subpackage is available.
#
prerm_rmnods () { :
    if [ -x "@sbindir@/@STRCONF_DEVICES@" ]; then
	echo "${package}: removing old devices."
	@sbindir@/@STRCONF_DEVICES@ --remove || :
    fi
    return 0
}
#
# prerm_preload() - As the sub-package is being removed altogether,
#   remove added preloads from the modules or modprobe.preload file.  The
#   modules themselves have already been removed.
#
prerm_preload () { :
    if [ -n '@WITH_KO_MODULES_FALSE@' ]
    then prel_old=@sysconfdir@/modules
    else prel_old=@sysconfdir@/modprobe.preload
    fi
    if [ -f $prel_old ] ; then
        prel_tmp=$tmppath/modprobe.preload.tmp.$$
        prel_new=$tmppath/modprobe.preload.new.$$
        cp -f -- $prel_old $prel_new
        mods="${preloads}" ; for m in $mods ; do
            sed -e '\|^[[:space:]]*'"$m"'[[:space:]]*$|d' $repl_new > $prel_tmp
            mv -f -- $prel_tmp $prel_new
        done
        chmod --reference=$prel_old -- $prel_new
        cp -f -b --suffix=.dpkg-save -- $prel_new $prel_old
        rm -f -- $prel_new
    fi
    :
}
prerm_preload () {
    prel_old="@preloads@"
    if [ -f $prel_old ] ; then
	prel_new="$tmppath/modprobe.preload.new.$$"
	prel_tmp="$tmppath/modprobe.preload.tmp.$$"
	cp -f -- $prel_old $prel_new
	for m in $preloads ; do
	    sed -e "/^[[:space:]]*$m>/d" $prel_new > $prel_tmp
	    mv -f -- $prel_tmp $prel_new
	done
	chmod --reference=$prel_old -- $prel_new
	cp -fb --suffix=.dpkg-save -- $prel_new $prel_old
	rm -f -- $prel_new
    fi
}
prerm_preload_remove () { :
    case @kminor@ in
	4) prel_old=@sysconfdir@/modules ;;
	5)  if [ @kpatch@ -lt 48 ]; then
		prel_old=@sysconfdir@/modules
	    else
		prel_old=@sysconfdir@/modprobe.preload
	    fi ;;
	6) prel_old=@sysconfdir@/modprobe.preload ;;
	*) return ;;
    esac
    # When we are going away altogether we want to remove any of our preloads
    # whatsoever from the modules or modprobe.preload file.
    if [ -f $prel_old ] ; then
        prel_tmp=$tmppath/modprobe.preload.tmp.$$
        prel_new=$tmppath/modprobe.preload.new.$$
        cp -f -- $prel_old $prel_new
        mods="${preloads}" ; for m in $mods ; do
            sed -e '\|^[[:space:]]*'"$m"'[[:space:]]*$|d' $repl_new > $prel_tmp
            mv -f -- $prel_tmp $prel_new
        done
        chmod --reference=$prel_old -- $prel_new
        cp -f -b --suffix=.rpmsave -- $prel_new $prel_old
        rm -f -- $prel_new
    fi
    :
}
#
# At the end of the upgrade (when _this_package_ is upgraded from) we remove our
# lines from the modules or modprobe.preloads file that we placed in them in the
# post scriptlet.  We only adjust our lines and leave any lines added by the new
# package post scriptlet.
#
prerm_preload_upgrade () { :
    case @kminor@ in
	4) prel_old=@sysconfdir@/modules ;;
	5)  if [ @kpatch@ -lt 48 ]
	    then prel_old=@sysconfdir@/modules
	    else prel_old=@sysconfdir@/modprobe.preload
	    fi ;;
	6) prel_old=@sysconfdir@/modprobe.preload ;;
	*) prel_old=@sysconfdir@/modprobe.preload ;;
    esac
    if [ -f $prel_old ] ; then
        prel_tmp=$tmppath/modprobe.preload.tmp.$$
        prel_new=$tmppath/modprobe.preload.new.$$
        cp -f -- $prel_old $prel_new
        mods="${preloads}" ; for m in $mods ; do
#	    This groovy sed script just pulls out the first matching line and
#	    leaves the rest untouched.
            sed -e '
\|^[[:space:]].*'"$m"'[[:space:]]*$|!b
N
s|^[[:space:]].*'"$m"'[[:space:]]*\
||
: loop
n
b loop' $prel_new > $prel_tmp
            mv -f -- $prel_tmp $prel_new
        done
        chmod --reference=$prel_old -- $prel_new
        cp -f -b --suffix=.dpkg-save -- $prel_new $prel_old
        rm -f -- $prel_new
    fi
    :
    return 0
}
prerm_preload_upgrade () { :
    case @kminor@ in
	(4) prel_old=@sysconfdir@/modules ;;
	(5) if [ @kpatch@ -lt 48 ]; then
		prel_old=@sysconfdir@/modules ;;
	    else
		prel_old=@sysconfdir@/modprobe.preload ;;
	    fi ;;
	(6) prel_old=@sysconfdir@/modprobe.preload ;;
    esac
    # At the end of the upgrade (when _this_package_ is upgraded from) we remove
    # our lines from the modules or modprobe.preloads file that we placed in
    # them in the post scriptlet.  We only adjust our lines and leave any lines
    # added by the new package post scriptlet.
    if [ -f $prel_old ] ; then
        prel_tmp=$tmppath/modprobe.preload.tmp.$$
        prel_new=$tmppath/modprobe.preload.new.$$
        cp -f -- $prel_old $prel_new
        mods="${preloads}" ; for m in $mods ; do
            # This groovy sed script just pulls out the first matching line and
            # leaves the rest untouched.
            sed -e '
\|^[[:space:]].*'"$m"'[[:space:]]*$|!b
N
s|^[[:space:]].*'"$m"'[[:space:]]*\
||
: loop
n
b loop' $prel_new > $prel_tmp
            mv -f -- $prel_tmp $prel_new
        done
        chmod --reference=$prel_old -- $prel_new
        cp -f -b --suffix=.rpmsave -- $prel_new $prel_old
        rm -f -- $prel_new
    fi
    :
}
prerm_initscripts () { :
    return
    # Upgrading, remove our init scripts if we can
    reverse=
    list="${initfiles}" ; for i in $list ; do
	if [ -z "$reverse" ]; then reverse="$i $reverse"; else reverse="$1"; fi
    done
    for i in $reverse ; do
        if [ -f @initrddir@/$i ] ; then
            # Try to stop them first.
            /sbin/service $i stop >/dev/null 2>&1 || \
		@initrddir@/$i stop >/dev/null 2>&1 || :
            # Find the best working init script removal tool
            [ -x /sbin/insserv             ] && /sbin/insserv -r          $i 2>&1 && continue || :
            [ -x /sbin/chkconfig           ] && /sbin/chkconfig --del     $i 2>&1 && continue || :
            [ -x /usr/lib/lsb/remove_initd ] && /usr/lib/lsb/remove_initd $i 2>&1 && continue || :
        fi
    done
    :
}
prerm_initscripts_upgrade () { :
    # Upgrading, remove our init scripts if we can
    reverse=
    list="${initfiles}" ; for i in $list ; do
        reverse="$i${reverse:+' '}$reverse"
    done
    for i in $reverse ; do
        if [ -f @initrddir@/$i ] ; then
            # Try to stop them first.
            /sbin/service $i stop >/dev/null 2>&1 || \
		@initrddir@/$i stop >/dev/null 2>&1 || :
            # Find the best working init script removal tool
            [ -x /sbin/insserv             ] && /sbin/insserv -r          $i 2>&1 && continue || :
            [ -x /sbin/chkconfig           ] && /sbin/chkconfig --del     $i 2>&1 && continue || :
            [ -x /usr/lib/lsb/remove_initd ] && /usr/lib/lsb/remove_initd $i 2>&1 && continue || :
        fi
    done
    :
    return 0
}
prerm_manrefs () { :
}
prerm_manmacros () { :
}
#
# prerm_base_remove() - Remove the -base subpackage completely.  No upgrade is
#   in processes.
prerm_base_remove () { :
    # We are being removed for good.
    prerm_rmnods
    prerm_preload
    prerm_initscripts
}
prerm_base_upgrade () { :
    # We are being removed because we are being replaced with a newer version.
    prerm_preload_upgrade
    prerm_initscripts_upgrade
    prerm_manrefs
    prerm_manmacros
}
# -----------------------------------------------------------------------------
# Primary functions:
# -----------------------------------------------------------------------------
# xxx-prerm remove
remove_prerm () { :
    prerm_base_remove
}
# con-prerm remove 'in-favour' package new-version
conflict_prerm () { :
    prerm_base_remove
}
# old-prerm upgrade new-version
upgrade_prerm () { :
    prerm_base_upgrade
}
# old-prerm upgrade new-version ***FAILED***
# new-prerm failed-upgrade old-version
failed_upgrade_prerm () { :
    prerm_base_upgrade
}
# dec-prerm deconfigure 'in-favour' package-being-installed version ['removing' conflicting-package version]
deconfigure_prerm () { :
    prerm_base_upgrade
}
