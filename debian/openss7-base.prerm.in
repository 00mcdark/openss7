subpkg=base
@openss7_header@
datarootdir=@datarootdir@
# -----------------------------------------------------------------------------
# Auxiliary functions:
# -----------------------------------------------------------------------------
#
# prerm_rmnods() - Remove STREAMS devices generated by STRCONF.  Note that this
#   is a shell script that does not require any STREAMS libraries to be present
#   and so can be called regardless of whether the -lib subpackage is available.
#
prerm_rmnods () { :
    if [ -x "@sbindir@/@STRCONF_DEVICES@" ]; then
	echo "${package}: removing old devices."
	@sbindir@/@STRCONF_DEVICES@ --remove || :
    fi
    return 0
}
#
# prerm_initscripts() - Before removing or upgrading a package, stop the init
#   scripts.  This is fine for 2.4 module systems, but it is a little too
#   disruptive for weak-module updates in the 2.6 module system.  Because this
#   is too disruptive for weak-updated systems, we disable the debhelper
#   scriplets and only stop init scripts when not performing weak updates, and
#   even then, only when the updates are for the running kernel.
#
prerm_initscripts () {
    local reverse= list="${initfiles}" i
    if [ "@kversion@" = "`uname -r`" ]; then
	for i in $list; do
	    reverse="$i${reverse:+' '}$reverse"
	done
	for i in $reverse; do
	    if [ -f "@initrddir@/$i" ] ; then
		[ -x "`which invoke-rc.d 2>/dev/null`" ] && invoke-rc.d $i stop && continue || true
		[ -x "`which service     2>/dev/null`" ] && service     $i stop && continue || true
		[ -x "@initrddir@/$i"                  ] && @initrddir@/$i stop && continue || true
	    fi
	done
    fi
    :
}
prerm_manrefs () { :
}
prerm_manmacros () { :
}
#
# prerm_base_remove() - Remove the -base subpackage completely.  No upgrade is
#   in processes.
prerm_base_remove () { :
    # We are being removed for good.
    prerm_rmnods
    @WITH_KO_MODULES_FALSE@prerm_initscripts
}
prerm_base_upgrade () { :
    # We are being removed because we are being replaced with a newer version.
    @WITH_KO_MODULES_FALSE@prerm_initscripts
    prerm_manrefs
    prerm_manmacros
}
# -----------------------------------------------------------------------------
# Primary functions:
# -----------------------------------------------------------------------------
# xxx-prerm remove
remove_prerm () { :
    prerm_base_remove
}
# con-prerm remove 'in-favour' package new-version
conflict_prerm () { :
    prerm_base_remove
}
# old-prerm upgrade new-version
upgrade_prerm () { :
    prerm_base_upgrade
}
# old-prerm upgrade new-version ***FAILED***
# new-prerm failed-upgrade old-version
failed_upgrade_prerm () { :
    prerm_base_upgrade
}
# dec-prerm deconfigure 'in-favour' package-being-installed version ['removing' conflicting-package version]
deconfigure_prerm () { :
    prerm_base_upgrade
}
@mscript_prerm@
@mscript_debhelper@
