[ ":${subpkg+set}" = ":set" ] || subpkg=

echo "@PACKAGE@-${subpkg}(@VERSION@-@PACKAGE_DEBRELEASE@): $*" >&2

case "$1" in

    (remove) :
	# remove-postrm remove
	eval "remove_${subpkg}_postrm"
	;;

    (purge) :
	# remove-postrm purge
	eval "purge_${subpkg}_postrm"
	;;

    (upgrade) :
	# old-postrm upgrade new-version
	eval "upgrade_${subpkg}_postrm"
	;;

    (failed-upgrade) :
	# old-postrm upgrade new-version ... failed
	# new-postrm failed-upgrade old-version
	eval "failed_upgrade_${subpkg}_postrm"
	;;

    (abort-install) :
	# new-preinst install [old-version] ... failed
	# new-postrm abort-install [old-version]
	echo "@PACKAGE@-${subpkg}(@VERSION@-@PACKAGE_DEBRELEASE@): $1: modules running." >&2
	;;

    (abort-upgrade) :
	# new-preinst upgrade old-version ... failed
	# new-postrm abort-upgrade old-version
	echo "@PACKAGE@-${subpkg}(@VERSION@-@PACKAGE_DEBRELEASE@): $1: modules running." >&2
	;;

    (disappear) :
	# disappear-postrm disappear overwriter overwriter-version
	eval "disappear_${subpkg}_postrm"
	;;

esac

