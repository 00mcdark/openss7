subpkg=base
@openss7_postrm@
datarootdir=@datarootdir@
# -----------------------------------------------------------------------------
# Auxiliary functions:
# -----------------------------------------------------------------------------
#
# postrm_preload() - When removing for good, make sure that the preload modules
#   are no longer included in the preloads file for 2.4 module systems.  Note
#   that removing lines from the /etc/modules-@kversion@ file are the
#   responsibility of the -kernel subpackage.
#
postrm_preload () { :
    for prel_old in @sysconfdir@/modules @sysconfdir@/modprobe.preload; do
	if [ -f $prel_old ]; then
	    prel_tmp=${tmppath:-'/var/tmp'}/modprobe.preload.tmp.$$
	    prel_new=${tmppath:-'/var/tmp'}/modprobe.preload.new.$$
	    cp -f -- $prel_old $prel_new
	    included=no
	    modules="${preload}"
	    for m in $modules; do
		if grep '^[[:space:]]*'"$m"'[[:space:]]*$' $prel_new >/dev/null 2>&1; then
		    included=yes
		fi
	    done
	    if [ $included = yes ]; then
		for m in $modules; do
		    grep -v '^[[:space:]]*'"$m"'[[:space:]]*$' $prel_new >$prel_tmp
		    cp -f -- $prel_tmp $prel_new
		done
		chmod --reference=$prel_old -- $prel_new
		cp -f -b --suffix=.dpkg-save -- $prel_new $prel_old
	    fi
	    rm -f -- $prel_new
	fi
    done
    :
}
postrm_base () { :
    @WITH_KO_MODULES_FALSE@postrm_preload
}
#
# postrm_modconf() - As the subpackage is being purged, remove the line from
#   the modules.conf file that points at the /etc/modutils/openss7 file that in
#   turn includes the /lib/modules/@kversion@/modules.openss7 file when it
#   exists.  Note that the files themselves referenced from the modules.conf
#   files are removed as a normal part of the course of removing the files in
#   the -kernel sub-packages.
#
postrm_modconf () { :
    conf_old=@sysconfdir@/modules.conf
    if [ -f $conf_old ] ; then
        conf_tmp=${tmppath:-'/var/tmp'}/modules.conf.tmp.$$
        conf_new=${tmppath:-'/var/tmp'}/modules.conf.new.$$
        cp -f -- $conf_old $conf_new
        sed -e '\|^include[[:space:]].*'"@modutildir@"'/'"$base"'|d' $conf_new > $conf_tmp
        mv -f -- $conf_tmp $conf_new
	if diff $conf_new $conf_old >/dev/null 2>&1; then
	    chmod --reference=$conf_old $conf_new
	    cp -f -b --suffix=.dpkg-save -- $conf_new $conf_old
	fi
        rm -f -- $conf_new
    fi
    :
}
#
# postrm_base_purge() - The subpackage is being purged, rebuild databases and
#   adjust other files in preparation for removal of configuration files.
#
postrm_base_purge () { :
    @WITH_KO_MODULES_FALSE@postrm_modconf
}
# -----------------------------------------------------------------------------
# Primary functions:
# -----------------------------------------------------------------------------
# remove-postrm remove
remove_postrm () { :
    postrm_base
}
# remove-postrm purge
purge_postrm () { :
    postrm_base_purge
}
# old-postrm upgrade new-version
upgrade_postrm () { :
