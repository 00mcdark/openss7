if [ $1 -eq 0 ] ; then : # complete removal
    postun_remove || :
fi
# ---------------------------------------------------------------------------
# ---------------------------------------------------------------------------
postun_upgrade () { :
%if %{FILES_oldmods}
    postun_oldmods || :
%endif
}
# ---------------------------------------------------------------------------
if [ $1 -ge 1 ] ; then : # upgrade
    postun_upgrade
