Summary:            %{title} Java modules and native libraries.
Group:              System Environment/Libraries
%{?_xpm:Icon:       %_xpm}
%{?_gif:Icon:       %_gif}
Autoreq:            true
Autoprov:           true

%if %{FILES_jnilibs}
Prefix:             %{_jnidir}
%endif
%if %{FILES_gcjlibs}
Prefix:             %{_pkggcjdir}
%endif
%if %{FILES_gcjmaps}
Prefix:             %{_pkggcjdir}
%endif
%if %{FILES_jarfiles}
Prefix:             %{_javadir}
%endif

%if %{FILES_jnilibs}
Requires(post):     /usr/bin/libtool
Requires(postun):   /usr/bin/libtool
Requires(post):     /sbin/ldconfig
Requires(postun):   /sbin/ldconfig
%endif
%if %{FILES_gcjlibs}
Requires(post):     /usr/bin/libtool
Requires(postun):   /usr/bin/libtool
Requires(post):     /sbin/ldconfig
Requires(postun):   /sbin/ldconfig
%endif
%if %{FILES_gcjmaps}
Requires(post):     /usr/bin/gcj-dbtool
Requires(postun):   /usr/bin/gcj-dbtool
Requires(post):     /usr/bin/rebuild-gcj-db
Requires(postun):   /usr/bin/rebuild-gcj-db
%endif
%if %{FILES_jarfiles}
Requires(post):     /usr/bin/rebuild-jar-repository
Requires(postun):   /usr/bin/rebuild-jar-repository
%endif

# Requirements will be automatic.
#if %{NEED_lib}
#equires:           %{name}-lib     = %{epoch}:%{baseversion}-%{baserelease}
#endif

Release:            %{specrelease}

# ---------------------------------------------------------------------------
%description java
%{descripline}
The %{name}-java binary package contains JAIN implementations for
%{title}.  It includes jar files, JNI and CNI libraries, and gcj native
compiled libraries.  It also includes SWIG implementations of Java
interfaces for %{title} API libraries.
%{descriptail}

%pre -p /bin/bash java
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
%if %{FILES_jnilibs}
# ---------------------------------------------------------------------------
# pre_jnilibs() - On a fresh installation, look for an remove any non-deb or
#   old tarball release libraries.  On reinstallations this step can (and
#   should) be skipped.  Unfortunately, non-autoconf releases of LiS placed
#   libraries all over the place.  On an initial installation, this checks for
#   other libraries with the same name and deletes them.
# ---------------------------------------------------------------------------
pre_jnilibs () {
    local libs="%jnilibs" lib old_libs old
    for lib in $libs; do
        old_libs="`( /sbin/ldconfig -p | grep '\<lib'$lib'\>' | cut '-d ' -f4 ) 2>/dev/null`"
        for old in $old_libs; do
            echo "warning: Deleting old non-rpm library $old" >&2
            rm -f -- $old || :
        done
    done
}
%endif
%if %{FILES_gcjlibs}
# ---------------------------------------------------------------------------
# pre_gcjlibs() - On fresh install, look for non-rpm libraries and remove
#   them.  This is not necessary as the gcj libraries will simply be used once
#   the new libraries have been installed and the old ones removed.
# ---------------------------------------------------------------------------
pre_gcjlibs () { :
}
%endif
%if %{FILES_gcjmaps}
# ---------------------------------------------------------------------------
# pre_gcjmaps() - On fresh install, look for non-rpm libraries and remove
#   them.  This is not necessary as the gcj map will simply be rebuilt once
#   the new libraries have been installed and the old ones removed.
# ---------------------------------------------------------------------------
pre_gcjmaps () { :
}
%endif
%if %{FILES_jarfiles}
# ---------------------------------------------------------------------------
# pre_jarfiles() - On fresh install, look for non-rpm jarfiles and remove
#   them.  This is not necessary as the jar repository will simply be rebuilt
#   once the new files have been installed and the old ones removed.
# ---------------------------------------------------------------------------
pre_jarfiles () { :
}
%endif
# ---------------------------------------------------------------------------
# pre_install() - On fresh install, go looking for conflicting things and
#   removing them.  Currently this is only some libraries with the same name.
#   This is only done on fresh install.  If this operation breaks some
#   package, it can be reinstalled after the first installation of this
#   package.
# ---------------------------------------------------------------------------
pre_install () { :
%if %{FILES_jnilibs}
    pre_jnilibs || :
%endif
%if %{FILES_gcjlibs}
    pre_gcjlibs || :
%endif
%if %{FILES_gcjmaps}
    pre_gcjmaps || :
%endif
%if %{FILES_jarfiles}
    pre_jarfiles || :
%endif
}
# ---------------------------------------------------------------------------
if [ $1 -eq 1 ] ; then : # fresh install
    pre_install || :
fi
# ---------------------------------------------------------------------------
# pre_upgrade() - Priority to upgrade installation of the new version's files,
#   it is possible to remove old files that are no longer required before adding
#   the new files.  This would make it possible to relink libraries, rebuild
#   caches and databases in post and not require any further actions from
#   postun.  However, because the java libraries is still somewhat changeable
#   here, relink and rebuild from the old version's postun instead.
# ---------------------------------------------------------------------------
pre_upgrade () { :
    # do nothing
}
# ---------------------------------------------------------------------------
if [ $1 -eq 2 ] ; then : # upgrade
    pre_upgrade || :
fi
# ---------------------------------------------------------------------------
#pre -p /bin/bash java
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

%post -p /bin/bash java
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
%if %{FILES_jnilibs}
# ---------------------------------------------------------------------------
# post_jnilibs() - On fresh install or upgrade, do a load config.
# ---------------------------------------------------------------------------
post_jnilibs () { :
    if [ -x "`which libtool 2>/dev/null`" ]; then
        libtool --mode=finish %{_jnidir} && return 0 || :
    fi
    if [ -x "`which ldconfig 2>/dev/null`" ]; then
        ldconfig %{_jnidir} && return 0 || :
    fi
    return 1
}
%endif
%if %{FILES_gcjlibs}
# ---------------------------------------------------------------------------
# post_gcjlibs() - On fresh install or upgrade, do nothing.
# ---------------------------------------------------------------------------
post_gcjlibs () { :
    if [ -x "`which libtool 2>/dev/null`" ]; then
        libtool --mode=finish %{_pkggcjdir} || :
        return 0
    fi
    if [ -x "`which ldconfig 2>/dev/null`" ]; then
        ldconfig %{_pkggcjdir} || :
        return 0
    fi
    return 1
}
%endif
%if %{FILES_gcjmaps}
# ---------------------------------------------------------------------------
# post_gcjmaps() - On fresh install or upgrade, rebuild the classmap database.
# ---------------------------------------------------------------------------
post_gcjmaps () { :
    if [ -x "`which rebuild-gcj-db 2>/dev/null`" ] ; then
        rebuild-gcj-db || :
    else
        if [ -x "`which gcj-dbtool 2>/dev/null`" ] ; then
            # basically what rebuild-gcj-db does
            for base in /usr/lib* ; do
                d=$base/gcj
                [ -d $d ] || continue
                db=`gcj-dbtool -p $base`
                [ -n "$db" ]  || continue
                dirname $db | xargs mkdir -p
                gcj-dbtool -n $db.tmp 64
                find $d -follow -name '*.db' -print0 | \
                    xargs -0 gcj-dbtool -m $db.tmp $db.tmp
                mv -f -- $db.tmp $db
            done
        fi
    fi
}
%endif
%if %{FILES_jarfiles}
# ---------------------------------------------------------------------------
# ---------------------------------------------------------------------------
post_jarfiles () { :
    # Fresh install or upgrade: relink the jar files.
    if [ -x "`which rebuild-jar-repository 2>/dev/null`" ] ; then
        rebuild-jar-repository %_javadir || :
    fi
}
%endif
# ---------------------------------------------------------------------------
# post_install () - This is the end of a fresh installation of the java
#   package.  Relink libraries and rebuild caches and databases.
# ---------------------------------------------------------------------------
post_install () { :
%if %{FILES_jnilibs}
    post_jnilibs || :
%endif
%if %{FILES_gcjlibs}
    post_gcjlibs || :
%endif
%if %{FILES_gcjmaps}
    post_gcjmaps || :
%endif
%if %{FILES_jarfiles}
    post_jarfiles || :
%endif
}
# ---------------------------------------------------------------------------
if [ $1 -eq 1 ] ; then : # fresh install
    post_install || :
fi
# ---------------------------------------------------------------------------
# post_upgrade () - This is the end of an upgrade of the java package.  The
#   databases and caches should not be rebuilt at this point because they
#   would include files from the old version that are about to be removed.
#   Let the postun of the old version do the work.
# ---------------------------------------------------------------------------
post_upgrade () { :
    # do nothing
}
# ---------------------------------------------------------------------------
if [ $1 -ge 2 ] ; then : # upgrade
    post_upgrade || :
fi
# ---------------------------------------------------------------------------
#post -p /bin/bash java
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

%postun -p /bin/bash java
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
%if %{FILES_jnilibs}
# ---------------------------------------------------------------------------
# postun_jnilibs() - Complete removal of the java subpackage and its jni
#   libraries.  Perform a load config to update the shared object library
#   caches.
# ---------------------------------------------------------------------------
postun_jnilibs () { :
    if [ -x "`which libtool 2>/dev/null`" ]; then
        libtool --mode=finish %{_jnidir} || :
        return 0
    fi
    if [ -x /sbin/ldconfig ]; then
        /sbin/ldconfig -n %{_jnidir} || :
        return 0
    fi
    return 1
}
%endif
%if %{FILES_gcjlibs}
# ---------------------------------------------------------------------------
# postun_gcjlibs() - Complete removal of the java subpackage.  Nothing to do
#   for gcj libraries.
# ---------------------------------------------------------------------------
postun_gcjlibs () { :
    if [ -x "`which libtool 2>/dev/null`" ]; then
        libtool --mode=finish %{_pkggcjdir} && return 0 || :
    fi
    if [ -x "`which ldconfig 2>/dev/null`" ]; then
        ldconfig -n %{_pkggcjdir} && return 0 || :
    fi
    return 1
}
%endif
%if %{FILES_gcjmaps}
# ---------------------------------------------------------------------------
# postun_gcjmaps() - Complete removal of the java subpackage and its gcj
#   libraries.  Rebuild the GCJ classmap database to exclude the removed gcj
#   library files.
# ---------------------------------------------------------------------------
postun_gcjmaps () { :
    if [ -x "`which rebuild-gcj-db 2>/dev/null`" ]; then
        rebuild-gcj-db || :
    else
        if [ -x "`which gcj-dbtool 2>/dev/null`" ]; then
            # basically what rebuild-gcj-db does
            for base in /usr/lib* ; do
                d=$base/gcj
                [ -d $d ] || continue
                db=`gcj-dbtool -p $base`
                [ -n "$db" ] || continue
                dirname $db | xargs mkdir -p
                gcj-dbtool -n $db.tmp 64
                find $d -follow -name '*.db' -print0 | \
                    xargs -0 gcj-dbtool -m $db.tmp $db.tmp
                mv -f -- $db.tmp $db
            done
        fi
    fi
}
%endif
%if %{FILES_jarfiles}
# ---------------------------------------------------------------------------
# postun_jarfiles() - Complete removal of the java subpackage and its jar
#   files: relink the jarfiles and rebuild the jar repository to exclude the
#   removed jar files.
# ---------------------------------------------------------------------------
postun_jarfiles () { :
    if [ -x "`which rebuild-jar-repository 2>/dev/null`" ] ; then
        rebuild-jar-repository %_javadir || :
    fi
}
%endif
# ---------------------------------------------------------------------------
# postun_remove() - Complete removal of the java subpackage.
# ---------------------------------------------------------------------------
postun_remove () { :
%if %{FILES_jnilibs}
    postun_jnilibs || :
%endif
%if %{FILES_gcjlibs}
    postun_gcjlibs || :
%endif
%if %{FILES_gcjmaps}
    postun_gcjmaps || :
%endif
%if %{FILES_jarfiles}
    postun_jarfiles || :
%endif
}
# ---------------------------------------------------------------------------
if [ $1 -eq 0 ] ; then : # complete removal
    postun_remove || :
fi
# ---------------------------------------------------------------------------
# postun_upgrade() - Upgrade of the java subpackage.  This is the old
#   package's postun on an upgrade.  The old version should not perform any
#   actions now that the new version's post has run.  Nevertheless, some files
#   may now be removed that were not removed before, so relink libraries and
#   rebuild caches and databases again.
# ---------------------------------------------------------------------------
postun_upgrade () { :
%if %{FILES_jnilibs}
    postun_jnilibs || :
%endif
%if %{FILES_gcjlibs}
    postun_gcjlibs || :
%endif
%if %{FILES_gcjmaps}
    postun_gcjmaps || :
%endif
%if %{FILES_jarfiles}
    postun_jarfiles || :
%endif
}
# ---------------------------------------------------------------------------
if [ $1 -ge 1 ] ; then : # upgrade
    postun_upgrade || :
fi
# ---------------------------------------------------------------------------
#postun -p /bin/bash java
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

%if %{PACKAGE_java}
%files java
# ---------------------------------------------------------------------------
%defattr(-,root,root)
%{?files_jnilibs:%{_jnidir}/*.so}
%{?files_jnilibs:%{_jnidir}/*.la}
%{?files_gcjlibs:%dir %{_pkggcjdir}}
%{?files_gcjlibs:%{_pkggcjdir}/*.so}
%{?files_gcjlibs:%{_pkggcjdir}/*.la}
%{?files_gcjmaps:%{_pkggcjdir}/*.db}
%{?files_jarfiles:%{_javadir}/*}
%endif

# =============================================================================
%package javadoc

Summary:        %{title} Javadoc.
Group:          Development/System
%{?_xpm:Icon:   %_xpm}
%{?_gif:Icon:   %_gif}
Autoreq:        true
Autoprov:       true

%if %{FILES_javadoc}
Prefix:         %{_pkgjavadocdir}
%endif

%if %{NEED_virt}
Requires:           %{name}         = %{epoch}:%{baseversion}-%{baserelease}
%endif

Release:        %{specrelease}

# ---------------------------------------------------------------------------
%description javadoc
%{descripline}
The %{name}-javadoc binary package contains Javadoc documentation for
%{title}.  Install this binary package if you are interested in
developing JAIN applications or resource adapters.  This package is
not normally required on other than a development system.
%{descriptail}

%if %{PACKAGE_jdoc}
%files javadoc
# -----------------------------------------------------------------------------
%defattr(-,root,root)
%{?files_javadoc:%docdir %{_pkgjavadocdir}}
%{?files_javadoc:%dir %{_pkgjavadocdir}}
%{?files_javadoc:%{_pkgjavadocdir}/*}
%endif

