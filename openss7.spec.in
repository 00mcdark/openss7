%triggerin -p /bin/bash -n %{kernel_develop} -- %{target_kdevel}
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
%if %{FILES_symvers}
# ---------------------------------------------------------------------------
# triggerin_symvers() - This trigger script runs after we are installed and
#   there is already a development kernel at the same version level install,
#   or after a development kernel at the same version level is installed and
#   we are already installed, or either this package or a development kernel
#   at the same version level is upgraded.  When we have a symbol sets file,
#   overwrite that of the development kernel with our version (which includes
#   the STREAMS symbol sets as well).
#
#   SuSE and RedHat are different here.  SuSE places a symsets archive in
#   /boot and also has one in /lib/modules/%{_kversion}/build.  RedHat only
#   has a symsets archive in /lib/modules/%{_kversion}/build, but
#   find-requires.ksyms checks both /boot and /usr/src/kernels/* (where
#   /lib/modules/*/build points).  Therefore we always place it in /boot.
# ---------------------------------------------------------------------------
triggerin_symvers () {
    local d=%{_usrsrc}/%{name}-%{baseversion}-%{specrelease}/%{_kversion} \
          f=symsets-%{_kversion}.tar.gz
    if [ -r $d/$f ] then
        cp -f -- $d/$f /boot/$f || :
    fi
}
%endif
# ---------------------------------------------------------------------------
# triggerin_kernel_develop() - When rpm trigger scripts are operating properly
#   (which is not often), this function should execute when this kernel
#   development package is being upgraded while a corresponding development
#   kernel is present.
# ---------------------------------------------------------------------------
triggerin_kernel_develop () { :
%if %{FILES_symvers}
    triggerin_symvers || :
%endif
}
# ---------------------------------------------------------------------------
if [ $1 -ge 2 ] ; then : # develop is being upgraded with devel kernel present
    triggerin_kernel_develop || :
fi
# ---------------------------------------------------------------------------
# triggerin_develop_kernel() - When rpm trigger scripts are operating properly
#   (which is not often), this function should execute when a corresponding
#   development kernel is upgraded while this kernel development package is
#   installed.
# ---------------------------------------------------------------------------
triggerin_develop_kernel () { :
%if %{FILES_symvers}
    triggerin_symvers || :
%endif
}
# ---------------------------------------------------------------------------
if [ $2 -ge 2 ] ; then : # devel kernel is being upgraded with develop present
    triggerin_develop_kernel || :
fi
# ---------------------------------------------------------------------------
# triggerin_install() - When rpm trigger scriptsw are operating properly
#   (which is not often), this function should execute when a corresponding
#   development kernel is installed while this kernel development package is
#   already installed, or vise versa.
# ---------------------------------------------------------------------------
triggerin_install () { :
%if %{FILES_symvers}
    triggerin_symvers || :
%endif
}
# ---------------------------------------------------------------------------
if [ $1 -eq 1 -a $2 -eq 1 ] ; then : # devel kernel or develop installed other present
    triggerin_install || :
fi
