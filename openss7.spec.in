Provides:       %{name}-%{core_name} = %{epoch}:%{version}-%{fullrelease}
Provides:       %{name}-%{_streams}-core = %{epoch}:%{version}-%{fullrelease}
Provides:       %{name}-%{_streams}-kmod = %{epoch}:%{version}-%{fullrelease}
