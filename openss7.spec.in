%endif
%if %{FILES_oldmods}
# ---------------------------------------------------------------------------
# postun_oldmods() - After final removal or upgrade of a kernel modules package
#   for 2.4 modules systems, or when weak modules are not supported under 2.6
#   (never), then perform a depmod for the remaining kernel modules.  Use the
#   most information that is available to depmod.  Note that the post_weakmods()
#   function performs this action for 2.6 module systems with weak updates.
#   Maybe at some point in the future depmod will be made smarter than having do
#   do all this.  Why can't it check these files itself?
# ---------------------------------------------------------------------------
postun_oldmods () { :
    [ -x "`which depmod 2>/dev/null`" ] || return 0
    if depmod --help 2>&1 | grep '[[:space:]]-E[[:space:]]' >/dev/null 2>&1; then
        if [ -r /lib/modules/%{kernel_version}/build/Module.symvers ]; then
            UNAME_MACHINE=%{_target_cpu} \
            depmod -ae \
                -E /lib/modules/%{kernel_version}/build/Module.symvers \
                %{kernel_version} 2>&1 || :
            return
        elif [ -r %_usrsrc/%name-%baseversion-%specrelease/%_kversion/System.symvers ]; then
            UNAME_MACHINE=%{_target_cpu} \
            depmod -ae \
                -E %usrsrc/%name-%baseversion-%specrelease/%_kversion/System.symvers \
                %{kernel_version} 2>&1 || :
            return
        elif [ -r /boot/symvers-%{kernel_version}.gz ]; then
            symtemp=%_tmppath/module.symvers.tmp.$$
            gzip -dc /boot/symvers-%{kernel_version}.gz >$symtemp
            UNAME_MACHINE=%{_target_cpu} \
            depmod -ae \
                -E $symtemp \
                %{kernel_version} 2>&1 || :
            rm -f -- $symtemp
            return
        fi
    fi
    if [ -r /boot/System.map-%{kernel_version} ] ; then
        UNAME_MACHINE=%{_target_cpu} \
        depmod -ae \
            -F /boot/System.map-%{kernel_version} \
            %{kernel_version} 2>&1 || :
    else
        UNAME_MACHINE=%{_target_cpu} \
        depmod -a \
            %{kernel_version} 2>&1 || :
    fi
}
# ---------------------------------------------------------------------------
%endif
#
remove_depends() {
    local modrex depend depends
    modrex=`echo $1 | sed -e 's,[-_],[-_],g'`
    depends=`grep "^$modrex[[:space:]]" /proc/modules 2>/dev/null | cut -f4 '-d ' | sed -e 's|^-$||;s|,$||;s|,| |g'`
    for depend in $depends ; do
        remove_depends $depend || return $?
    done
    if grep "^$modrex[[:space:]]" /proc/modules >/dev/null 2>&1 ; then
        rmmod $1 >/dev/null 2>&1 || return $?
    fi
    return 0
}
if [ $1 = 0 -o $1 = 1 ] ; then : # final removal or upgrade
    if [ :"%{kernel_version}" = :"`uname -r`" ] ; then
        # This is a running kernel, do a depmod on the modules directory for.
        if [ -r /boot/System.map-%{kernel_version} ] ; then
            depmod -ae -F /boot/System.map-%{kernel_version} 2>&1 || :
        else
            depmod -ae 2>&1 || :
        fi
    elif [ -r /boot/System.map-%{kernel_version} ] ; then
        # Non-running kernels a depmod will be performed on boot but depmod
        # anyway.
        UNAME_MACHINE=%{_target_cpu} \
        depmod -ae -F /boot/System.map-%{kernel_version} %{kernel_version} 2>&1 || :
    fi
    if [ :"%{kernel_version}" = :"`uname -r`" ] ; then
        # One more kick at killing any loaded modules on uninstall, last stage
        # of the upgrade on a running kernel for upgrade.
        reboot='no'
        if [ -r /var/run/strace.pid ] ; then
            kill -TERM `cat /var/run/strace.pid` || :
            rm -f /var/run/strace.pid
            rm -f /var/lock/subsys/strace
            rm -f /var/lock/subsys/strace.init
        fi
        if [ -r /var/run/strerr.pid ] ; then
            kill -TERM `cat /var/run/strerr.pid` || :
            rm -f /var/run/strerr.pid
            rm -f /var/lock/subsys/strerr
            rm -f /var/lock/subsys/strerr.init
        fi
        umount -a -t specfs || reboot='yes'
%if %{USE_rmnods}
        if [ -x "%{mknods}" ] ; then
            %{rmnods}
        fi
%endif
        if lsof | grep '\<STR\>' >/dev/null 2>&1 ; then
            if [ -x /usr/sbin/fdetach ] ; then
                /usr/sbin/fdetach -a 2>/dev/null || :
            fi
            for signal in TERM KILL ; do
                if lsof | grep '\<STR\>' >/dev/null 2>&1 ; then
                    lsof | grep '\<STR\>' | \
                    while read fields ; do
                        set -- $fields
                        if [ ":$5" != ':CHR' ] ; then continue; fi
                        ind=`expr $# - 1`
                        eval "val=\"\${$ind}\""
                        if [ ":$val" != ':STR' ] ; then continue; fi
                        kill -$signal $2 >/dev/null 2>&1 || :
                    done
                    sleep 5
                fi
            done
        fi
        lsof | grep '\<STR\>' >/dev/null 2>&1 && reboot='yes'
        remove_depends streams || reboot='yes'
        remove_depends specfs  || reboot='yes'
        [ ":$reboot" != ':yes' ] || echo "Reboot required." >&2
    fi
fi
%endif
