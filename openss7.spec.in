Provides:           %{name}-repo    = %{epoch}:%{baseversion}-%{rpmrelease}

Release:            %{specrelease}

# ---------------------------------------------------------------------------
%description repo
The %{name}-repo binary package contains the repostory source and
package updater information necessary to properly establish the
OpenSS7 repository definitions for installing the other packages
in the set.
%{descriptail}

%pre -p /bin/bash repo
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# This is an initial installation or upgrade of the repo subpackage.  We do
# not need to check for legacy or non-rpm installations, because the non-rpm
# installs do not create repository definitions.  We do need to check,
# however, whether we have some machine credentials lying around from a
# previous install/remove/upgrade cycle.
# ---------------------------------------------------------------------------
# pre_yumrepo() - On fresh installation or upgrade, establish the yum repository
#   definitions and obtain credentials when reuquired.  This is for RedHat based
#   systems such as RHEL 5 and 6, CentOS 5 or 6, and Fedora.
# ---------------------------------------------------------------------------
pre_yumrepo () { :
    (
        cd '%{_yumrepodir}'
        un=; pw=; oldfile=; file='@PACKAGE@.repo'
        for s in '' '.rpmsave' '.rpmnew' ; do
            oldfile="$file$s"
            if test -e $oldfile ; then
                un=`sed -n -r 's,^.*baseurl[[:space:]]*=[[:space:]]*http[s]?://([^@:]*)(:([^@]*))@.*$,\1,p;t end;b;: end q' $oldfile`
                pw=`sed -n -r 's,^.*baseurl[[:space:]]*=[[:space:]]*http[s]?://([^@:]*)(:([^@]*))@.*$,\3,p;t end;b;: end q' $oldfile`
                [ -n "$un" -a -n "$pw" ] || continue
                break
            fi
        done
        [ ":$oldfile" != ":$file" ] || mv -f -- $file $file.rpmsave
        ext="?hn=`hostname -f`&ip=`hostname -i | sed 'y/ /,/'`${un:+'&un='}${un}${pw:+'&pw='}${pw}"
        ext="$ext"`echo '/%{_rpmsubdir}' | sed 's,//,/,g;s,/,\&distro=,;s,/,\&relver=,;s,/,\&osarch=,'`
	key=; [ -z "$un" ] || key="${un}${pw:+':'}${pw}@"
        url='%{_reposerv}://'"${key}"'%{_repobase}/%{_reporoot}/rpms/repodata/'"$file$ext"
        rm -f -- $file
        if ! echo "$url" | wget -i - -O $file 2>/dev/null ; then
            if echo "$url" | wget -i - -O /dev/null 2>&1 | grep '401 Authorization Required' >/dev/null 2>&1 ; then
                echo 'Authorization required for repository access.' >/dev/tty
                u='anonymous'; p=
                read -e  -p 'Username: ' u </dev/tty >/dev/tty; u=${u:-'anonymous'}
                if [ "$u" != 'anonymous' ] ; then
                read -es -p 'Password: ' p </dev/tty >/dev/tty
                echo '' >/dev/tty
                fi
		key=; [ -z "$u" ] || key="${u}:${p}@"
                url='%{_reposerv}://'"${key}"'%{_repobase}/%{_reporoot}/rpms/repodata/'"$file$ext"
                rm -f -- $file
                if ! echo "$url" | wget -i - -O $file 2>/dev/null ; then
                    [ ":$oldfile" != ":$file" ] || mv -f -- $file.rpmsave $file
                    echo 'Authorization failed.' >/dev/tty
                    exit 1
                fi
            fi
        fi
        if [ ! -e $file ] ; then
            [ ":$oldfile" != ":$file" ] || mv -f -- $file.rpmsave $file
            exit 1
        fi
    ) || exit 1
}
# ---------------------------------------------------------------------------
# pre_zypprepo() - On fresh installation or upgrade, establish the zypp
#   repository definitions and obtain credentials when required.  This is for
#   SuSE based systems such as SLES 11  and OpenSuSE.
# ---------------------------------------------------------------------------
pre_zypprepo () { :
    (
        cd '%{_zyppcreddir}'
        un=; pw=; oldfile=; file='@PACKAGE_UCNAME@credentials'
        for s in '@PACKAGE_UCNAME@' 'NCC' ; do
            oldfile="${s}credentials"
            if [ -e $oldfile ] ; then
                un=`awk 'BEGIN{FS="="}{if($1~/^username$/){print$2;exit}}' $file`
                pw=`awk 'BEGIN{FS="="}{if($1~/^password$/){print$2;exit}}' $file`
                [ -n "$un" -a -n "$pw" ] || continue
                break
            fi
        done
        [ ":$oldfile" != ":$file" ] || mv -f -- $file $file.rpmsave
        ext="?hn=`hostname -f`&ip=`hostname -i | sed 'y/ /,/'`${un:+&un=$un}${pw:+&pw=$pw}"
        ext="$ext"`echo '/%{_rpmsubdir}' | sed 's,//,/,g;s,/,\&distro=,;s,/,\&relver=,;s,/,\&osarch=,'`
        url='%{_reposerv}://'"${un:+$un${pw:+:$pw}@}"'%{_repobase}/%{_reporoot}/'"$file$ext"
        rm -f -- $file
        if ! echo "$url" | wget -i - -O $file 2>/dev/null ; then
            if echo "$url" | wget -i - -O /dev/null 2>&1 | grep '401 Authorization Required' >/dev/null 2>&1 ; then
                echo 'Authorization required for repository access.' >/dev/tty
                u='anonymous'; p=
                read -e  -p 'Username: ' u </dev/tty >/dev/tty; u=${u:-anonymous}
                if [ "$u" != 'anonymous' ] ; then
                read -es -p 'Password: ' p </dev/tty >/dev/tty
                echo '' >/dev/tty
                fi
                url='%{_reposerv}://'"${u:+$u:$p@}"'%{_repobase}/%{_reporoot}/'"$file$ext"
                rm -f -- $file
                if ! echo "$url" | wget -i - -O $file 2>/dev/null ; then
                    [ ":$oldfile" != ":$file" ] || mv -f -- $file.rpmsave $file
                    echo 'Authorization failed.' >/dev/tty
                    exit 1
                fi
            fi
        fi
        if [ -e $file ] ; then chmod go-rw $file; else
            [ ":$oldfile" != ":$file" ] || mv -f -- $file.rpmsave $file
            exit 1
        fi
    ) || exit 1
    (
        cd '%{_zyppcreddir}'
        un=; pw=; file='@PACKAGE_UCNAME@credentials'
        if [ -e $file ] ; then
            un=`awk 'BEGIN{FS="="}{if($1~/^username$/){print$2;exit}}' $file`
            pw=`awk 'BEGIN{FS="="}{if($1~/^password$/){print$2;exit}}' $file`
        fi
        [ -n "$un" -a -n "$pw" ] || exit 1
        cd '%{_zyppservdir}'
        file='OPENSS7.service';
        [ ! -e $file ] || mv -f -- $file $file.rpmsave
        url='%{_reposerv}://'"${un:+$un${pw:+:$pw}@}"'%{_repobase}/%{_reporoot}/'"$file"
        rm -f -- $file
        if ! echo "$url" | wget -i - -O $file 2>/dev/null ; then
            [ ! -e $file.rpmsave ] || mv -f -- $file.rpmsave $file
            exit 1
        fi
        if [ ! -e $file ] ; then
            [ ! -e $file.rpmsave ] || mv -f -- $file.rpmsave $file
            exit 1
        fi
    ) || exit 1
}
# ---------------------------------------------------------------------------
# pre_repo() - This is a fresh installation or upgrade of the repo
#   subpackage.  Note that we leave credentials lying around regardless of
#   whether the package was removed at some point, so all installations are the
#   same regardless of whether they are fresh or an upgrade.
# ---------------------------------------------------------------------------
pre_repo () { :
%if %{FILES_yumrepo}
    pre_yumrepo || :
%endif
%if %{FILES_zypprepo}
    pre_zypprepo || :
%endif
}
# ---------------------------------------------------------------------------
if [ $1 -eq 1 ] ; then : # fresh install
    pre_repo || :
fi
# ---------------------------------------------------------------------------
if [ $1 -ge 2 ] ; then : # upgrade
    pre_repo || :
fi
# ---------------------------------------------------------------------------
#pre -p /bin/bash repo
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

%post -p /bin/bash repo
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# After we install this repository package, we need to adjust whatever
# definitions are required in either the /etc/yum/yum-plugins.d/kmod.conf or
# /etc/zypp/zypp.conf files.
# ---------------------------------------------------------------------------
%if %{FILES_yumrepo}
# ---------------------------------------------------------------------------
# post_yumrepo() - On fresh install or upgrade of the repo package for RedHat
#   based systems, edit the kmod.conf and fedorakmod.conf file to install
#   kernel modules for all kernels and to pin kernels.
# ---------------------------------------------------------------------------
post_yumrepo () { :
    d="%{_sysconfdir}/yum/pluginconf.d"
    for f in kmod.conf fedorakmod.conf ; do f="$d/$f"
        if [ -f $f ] ; then
            mv -f -- $f $f.rpmsave
            sed -r -e 's,^pinkernels.*$,pinkernels = 1,;s,^installforallkernels.*$,installforallkernels = 1,' $f.rpmsave >$f
            if diff $f.rpmsave $f >/dev/null 2>&1 ; then
                mv -f -- $f.rpmsave $f
            fi
        fi
    done
}
%endif
%if %{FILES_zypprepo}
# ---------------------------------------------------------------------------
# post_zypprepo() - On fresh install or upgrade of the repo package for SuSE
#   based systems, edit the zypp.conf file to multiversion kernels.
# ---------------------------------------------------------------------------
post_zypprepo () { :
    d="%{_sysconfdir}/zypp"
    for f in zypp.conf ; do f="$d/$f"
        if [ -f $f ] ; then
            mv -f -- $f $f.rpmsave
            sed -r -e 's,^multiversion.*$,multiversion = provides:multiversion(kernel),' $f.rpmsave >$f
            if diff $f.rpmsave $f >/dev/null 2>&1 ; then
                mv -f -- $f.rpmsave $f
            fi
        fi
    done
}
%endif
# ---------------------------------------------------------------------------
# post_repo() -
# ---------------------------------------------------------------------------
post_repo () { :
%if %{FILES_yumrepo}
    post_yumrepo || :
%endif
%if %{FILES_zypprepo}
    post_zypprepo || :
%endif
}
# ---------------------------------------------------------------------------
if [ $1 -eq 1 ] ; then : # fresh install
    post_repo || :
fi
# ---------------------------------------------------------------------------
if [ $1 -ge 2 ] ; then : # upgrade
    post_repo || :
fi
# ---------------------------------------------------------------------------
#post -p /bin/bash repo
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

%preun -p /bin/bash repo
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
%if %{FILES_yumrepo}
# ---------------------------------------------------------------------------
# preun_yumrepo() - On final removal of the repo subpackage, mark the
#   repository definition as disabled, but leave it lying around.  yum has no
#   commands for disabling repositories, so this is done manually.  It would be
#   unlikely that yum could be invoked from a maintenance script anyway.
# ---------------------------------------------------------------------------
preun_yumrepo () { :
    f='%{_yumrepodir}/@PACKAGE@.repo'
    if [ -r $f ] ; then
        sed 's,^enabled[[:space:]]*=[[:space:]]*1[[:space:]]*$,enabled = 0,' $f >$f.rpmsave
        mv -f -- $f.rpmsave $f
    fi
}
%endif
%if %{FILES_zypprepo}
# ---------------------------------------------------------------------------
# preun_zypprepo() - On final removal of the repo subpackage, remove the service
#   definition, repository definition and local repository caches.  The major
#   reason for doing this manually is that zypper cannot be invoked from within
#   a maintenance scriptlet because when installed or upgraded using zypper,
#   zypper is holding a lock that will keep the nested invocation from
#   completing... ever.
#   ---------------------------------------------------------------------------
preun_zypprepo () { :
    rm -f -- %{_zyppservdir}/@PACKAGE_UCNAME@.service
    rm -f -- %{_zypprepodir}/@PACKAGE_UCNAME@\:@PACKAGE@*.repo
    rm -rf -- %{_localstatedir}/cache/zypp/packages/@PACKAGE_UCNAME@\:@PACKAGE@*
    rm -rf -- %{_localstatedir}/cache/zypp/raw/@PACKAGE_UCNAME@\:@PACKAGE@*
    rm -rf -- %{_localstatedir}/cache/zypp/solv/@PACKAGE_UCNAME@\:@PACKAGE@*
}
%endif
# ---------------------------------------------------------------------------
# preun_remove() - When removing altogether the repo subpackage, disable the
#   repositories, but do not remove credentials or anything that would be
#   required to reinstall later with the same credentials.
# ---------------------------------------------------------------------------
preun_remove () { :
%if %{FILES_yumrepo}
    preun_yumrepo || :
%endif
%if %{FILES_zypprepo}
    preun_zypprepo || :
%endif
}
# ---------------------------------------------------------------------------
if [ $1 -eq 0 ] ; then : # final removal
    preun_remove || :
fi
# ---------------------------------------------------------------------------
# preun_upgrade() - When upgrading, the %post of the new version has already
#   completed what it wants so do nothing.
# ---------------------------------------------------------------------------
preun_upgrade () { :
    # do nothing
}
# ---------------------------------------------------------------------------
if [ $1 -ge 1 ] ; then : # upgrade
    preun_upgrade || :
fi
# ---------------------------------------------------------------------------
#preun -p /bin/bash repo
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

%postun -p /bin/bash repo
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# After we remove this repository package, we need to adjust whatever
# definitions are required in configuration files.  When we changed them on
# installation, we save an original copy in $f.rpmsave.  Therefore, if
# $f.rpmsave exists, copy it back.
# ---------------------------------------------------------------------------
%if %{FILES_yumrepo}
# ---------------------------------------------------------------------------
# postun_yumrepo() - When being removed for good, we saved the kmod.conf and
#   fedorakmod.conf configuration files when we initially installed and editted
#   the lines in these files.  If the stored copy is lying around, restore it on
#   complete removal.  These is nothing to do on upgrade.
# ---------------------------------------------------------------------------
postun_yumrepo () { :
    d="%{_sysconfdir}/yum/pluginconf.d"
    for f in kmod.conf fedorakmod.conf ; do f="$d/$f"
        if [ -f $f -a -f $f.rpmsave ] ; then
            if ! diff $f $f.rpmsave >/dev/null 2>&1 ; then
                mv -f -- $f.rpmsave $f
            fi
        fi
        rm -f -- $f.rpmsave
    done
}
%endif
%if %{FILES_zypprepo}
# ---------------------------------------------------------------------------
# postun_zypprepo() - When being removed for good, we save the zypp.conf file
#   when we initially installed and editted the lines in this file.  If the
#   stored copy is lying around, restore it on complete removal.  There is
#   nothing to do on upgrade.
# ---------------------------------------------------------------------------
postun_zypprepo () { :
    d="%{_sysconfdir}/zypp"
    for f in zypp.conf ; do f="$d/$f"
        if [ -f $f -a -f $f.rpmsave ] ; then
            if ! diff $f $f.rpmsave >/dev/null 2>&1 ; then
                mv -f -- $f.rpmsave $f
            fi
        fi
        rm -f -- $f.rpmsave
    done
}
%endif
# ---------------------------------------------------------------------------
# postun_remove() - When removing altogether the repo subpackage, restore the
#   originals if any changes that were made to yum plugin or zypper
#   configuration files.
#   ---------------------------------------------------------------------------
postun_remove () { :
%if %{FILES_yumrepo}
    postun_yumrepo || :
%endif
%if %{FILES_zypprepo}
    postun_zypprepo || :
%endif
}
# ---------------------------------------------------------------------------
if [ $1 -eq 0 ]; then : # final removal
    postun_remove || :
fi
# ---------------------------------------------------------------------------
# postun_upgrade() - When upgrading, the %post of the new version has already
#   completed what it wants so do nothing.
# ---------------------------------------------------------------------------
postun_upgrade () { :
    # do nothing
}
# ---------------------------------------------------------------------------
if [ $1 -ge 1 ]; then : # upgrade
    postun_upgrade || :
fi
