                        echo '# DO NOT EDIT THIS FILE: ALL EDITS WILL BE LOST!'
                        echo '# EDIT THE FILE IN snmp.d/'`basename $f`' INSTEAD.'
                        sed '/^[[:space:]]*##/d;/^[[:space:]]*$$/d' $f
                        ;;
                esac
            fi
