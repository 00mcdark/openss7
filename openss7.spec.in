    reboot='no'
    preun_kill_daemons || :
    preun_umount_specfs || reboot='yes'
    preun_rmnods || :
    preun_kill_streams || reboot='yes'
    remove_depends streams || reboot='yes'
    remove_depends specfs  || reboot='yes'
    [ ":$reboot" != ':yes' ] || echo "Reboot required." >&2
fi
