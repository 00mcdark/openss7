PACKAGE = @PACKAGE@
VERSION = @VERSION@

export DH_VERBOSE=1
export DH_OPTIONS

build: OS7_ARCH_OPTION = --enable-indep --enable-arch
build: build-stamp
build-stamp:
	dh_testdir
	./configure $(OS7_ARCH_OPTION) $(PACKAGE_DEBOPTIONS)
	$(MAKE)
	touch build-stamp

build-arch: OS7_ARCH_OPTION = --disable-indep --enable-arch
build-arch: build-stamp

build-indep: OS7_ARCH_OPTION = --enable-indep --disable-arch
build-indep: build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	$(MAKE) clean
	$(MAKE) distclean
	dh_clean

install: DH_OPTIONS=
install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	$(MAKE) DESTDIR=`pwd`/debian/tmp install
	dh_install

binary: build

binary-arch: build-arch

binary-indep: build-indep

get-orig-source:
	wget http://www.openss7.org/$(PACKAGE)-$(VERSION).tar.bz

