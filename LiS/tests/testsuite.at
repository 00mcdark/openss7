m4_divert_push([DEFAULTS])
at_SMP=
at_MP=
function check_smp() {
    case "$1" in
    (LIS)
	# LiS crashes on many tests regardless of SMP
	if test :${at_STRCONF_PACKAGE:-LiS} = :LiS
	then
	    cat <<ACEOF >&2
***** WARNING *****
This test causes LiS to hang or crash the kernel on all machine
types and all kernel types.  The testsuite has detected an LiS
system and, therefore, the test is skipped but assumed failed.

LIS IS FULL OF BUGS AND IS DEPRECATED!  PLEASE USE THE OPENSS7
LINUX FAST-STREAMS INSTEAD!  WHATEVER YOU DO, DO NOT REPORT THIS
TEST CASE FAILURE AS A BUG!
***** WARNING *****
ACEOF
	    return 2
	fi
	;;
    (SMP)
	# LiS crashes on many tests under SMP
	if test :${at_STRCONF_PACKAGE:-LiS} = :LiS
	then
	    if test :${at_SMP:-notset} = :notset
	    then
		# crashes on SMP machine
		if (grep -q '^processor[[[:space:]]]*:[[[:space:]]]*[[1-9]]' /proc/cpuinfo >/dev/null 2>&1)
		then
		    at_SMP=yes
		else
		    # crahses on SMP kernel UP machine
		    if (grep -q 'SMP' /proc/sys/kernel/version >/dev/null 2>&1)
		    then
			at_SMP=yes
		    else
			at_SMP=no
		    fi
		fi
	    fi
	    if test :$at_SMP = :yes
	    then
		cat <<ACEOF >&2
***** WARNING *****
This test causes LiS to hang or crash the kernel on all machine
types on SMP kernels.  The testsuite has detected an LiS SMP
system and, therefore, the test is skipped but assumed failed.

LIS IS FULL OF BUGS AND IS DEPRECATED!  PLEASE USE THE OPENSS7
LINUX FAST-STREAMS INSTEAD!  WHATEVER YOU DO, DO NOT REPORT THIS
TEST CASE FAILURE AS A BUG!
***** WARNING *****
ACEOF
		return 2
	    fi
	fi
	;;
    (MP)
	# LiS crashes on more tests on a MP machine
	if test :${at_STRCONF_PACKAGE:=LiS} = :LiS
	then
	    if test :${at_MP:-notset} = :notset
	    then
		# crashes on SMP machine
		if (grep -q '^processor[[[:space:]]]*:[[[:space:]]]*[[1-9]]' /proc/cpuinfo >/dev/null 2>&1)
		then
		    at_MP=yes
		else
		    at_MP=no
		fi
	    fi
	    if test :$at_MP = :yes
	    then
		cat <<ACEOF >&2
***** WARNING *****
This test causes LiS to hang or crash the kernel on MP machine
types on SMP kernels.  The testsuite has detected an LiS MP
system and, therefore, the test is skipped but assumed failed.

LIS IS FULL OF BUGS AND IS DEPRECATED!  PLEASE USE THE OPENSS7
LINUX FAST-STREAMS INSTEAD!  WHATEVER YOU DO, DO NOT REPORT THIS
TEST CASE FAILURE AS A BUG!
***** WARNING *****
ACEOF
		return 2
	    fi
	fi
	;;
    esac
}
function check_root() {
    if test `id -u` -ne 0 ; then return 77 ; else return 0 ; fi
}
at_STOPPED=
function stop_traceerr() {
    if test :${at_STOPPED:-notset} = :notset
    then
	if check_root
	then
	    # try shutting down loggers
	    [[ -x /etc/init.d/strace ]] && /etc/init.d/strace stop >/dev/null 2>&1
	    [[ -x /etc/init.d/strerr ]] && /etc/init.d/strerr stop >/dev/null 2>&1
	    at_STOPPED=yes
	    return 0
	else
	    at_STOPPED=no
	    return 1
	fi
    fi
    return 1
}
at_LEAKS=
function check_leaks() {
    if test :${at_LEAKS:-notset} = :notset
    then
	if (cat /proc/streams/strinfo | grep -v '000000000000') >/dev/null 2>&1
	then
	    if stop_traceerr
	    then
		sleep 1
		if (cat /proc/streams/strinfo | grep -v '000000000000') >/dev/null 2>&1
		then
		    at_LEAKS=no
		else
		    at_LEAKS=yes
		fi
	    else
		at_LEAKS=no
	    fi
	else
	    at_LEAKS=yes
	fi
    fi
    if test :${at_STRCONF_PACKAGE:-LiS} = :LfS -a :${at_LEAKS:-yes} != :no
    then
	# check for leaks
	if (cat /proc/streams/strinfo | grep -v '000000000000') >/dev/null 2>&1
	then
	    sleep 1
	    if (cat /proc/streams/strinfo | grep -v '000000000000') >&2
	    then
		return 1
	    else
		return 0
	    fi
	else
	    return 0
	fi
    else
	return 0
    fi
}
at_OPTIONS=
function build_options() {
    local options=
    if test :${at_OPTIONS:-notset} = :notset
    then
	if test :$at_verbose != :: ; then options='--verbose=5' ; else options='--again' ; fi
	if test $at_arg_given_fast = : ; then options="$options --fast $at_arg_fast" ; fi
	if test $at_arg_given_messages = : ; then options="$options --messages" ; fi
	if test $at_arg_given_quiet = : ; then options="$options --quiet" ; fi
	if test $at_arg_given_sync = : ; then sync || : ; fi
	at_OPTIONS="$options"
    fi
    echo "${at_OPTIONS}"
}
# first argument is test case executable, second argument is test case number,
# third argment is SMP characteristic to check.
function test_prog() {
    local smp= prog= tc=
    prog="$1" ; shift
    tc="$1" ; shift
    smp="$1" ; shift
    check_smp $smp && check_leaks && $prog `build_options` -o $tc "$@" && check_leaks
}
function test_prog_root() {
    check_root && test_prog "$@"
}
