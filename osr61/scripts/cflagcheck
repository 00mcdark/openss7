KERNEL_TOPDIR ?= /usr/src/linux
KERNEL_CONFIG = /usr/src/linux/.config
KCONFIG_CONFIG = $(KERNEL_CONFIG)

.SILENT:

.DEFAULT: cflag-check

cflag-check:
	@if test -n '$(KBUILD_CFLAGS)' ; then \
		echo '$(KBUILD_CFLAGS)' | sed -e 's|^$(KBUILD_CPPFLAGS) ||' ; \
	else \
		echo '$(CFLAGS)' | sed -e 's|^$(CPPFLAGS) ||' ; \
	fi

cppflag-check:
	@if test -n '$(KBUILD_CPPFLAGS)' ; then \
		echo '$(KBUILD_CPPFLAGS)' ; \
	else \
		echo "$(CPPFLAGS)" ; \
	fi

modflag-check:
	@echo "$(MODFLAGS)"

bldflag-check:
	@echo '$(basename_flags)'

flag-check:
	-:
	-echo "CROSS_COMPILE='$(CROSS_COMPILE)'"
	-echo "AS='$(AS)'"
	-echo "LD='$(LD)'"
	-echo "CC='$(CC)'"
	-echo "CPP='$(CPP)'"
	-echo "AR='$(AR)'"
	-echo "NM='$(NM)'"
	-echo "STRIP='$(STRIP)'"
	-echo "OBJCOPY='$(OBJCOPY)'"
	-echo "OBJDUMP='$(OBJDUMP)'"
	-:
	-echo "HOSTCC='$(HOSTCC)'"
	-echo "HOSTCFLAGS='$(HOSTCFLAGS)'"
	-echo "GENKSYMS='$(GENKSYMS)'"
	-echo "DEPMOD='$(DEPMOD)'"
	-echo "KALLSYMS='$(KALLSYMS)'"
	-echo "MODFLAGS='$(MODFLAGS)'"
	-echo "CFLAGS_KERNEL='$(CFLAGS_KERNEL)'"
	-echo "PERL='$(PERL)'"
	-echo "AWK='$(AWK)'"
	-echo "RPM='$(RPM)'"
	-:
	-if test -n '$(KBUILD_CFLAGS)' ; then echo "CFLAGS='$(KBUILD_CFLAGS)'" ; else echo "CFLAGS='$(CFLAGS)'" ; fi
	-if test -n '$(KBUILD_CPPFLAGS)' ; then echo "CPPFLAGS='$(KBUILD_CPPFLAGS)'" ; else echo "CPPFLAGS='$(CPPFLAGS)'" ; fi
	-if test -n '$(KBUILD_AFLAGS)' ; then echo "AFLAGS='$(KBUILD_AFLAGS)'" ; else echo "AFLAGS='$(AFLAGS)'" ; fi

env:
	@env


#include $(KERNEL_CONFIG)
include $(KERNEL_TOPDIR)/Makefile
-include $(KERNEL_TOPDIR)/scripts/Makefile.lib

# =============================================================================
#
