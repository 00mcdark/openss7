rpmdir = $(PACKAGE_NAME)-$(PACKAGE_VERSION)-$(PACKAGE_RELEASE)

RPM_ARCHIVES = $(rpmdir).tar.gz $(rpmdir).tar.bz2

if BUILD_RPMS

#
#   These are some rules that I use for generating source and binary RPMs
#   using automake.  I need to package releases using RPM.  The following
#   rules accomplish that for most packages.
#

RPMOPTS = -vv \
	--define "__source_payload w9.bzdio" \
	--define "__binary_payload w9.bzdio" \
	--define "_topdir `(cd $(top_builddir); pwd)`" \
	--define "_icon openss7-logo-small.gif" \
	--define "_kversion $(PACKAGE_KVERSION)" \
	$(PACKAGE_OPTIONS)

RPMBOPTS = -vv \
	--rebuild \
	--define "_topdir `(cd $(top_builddir); pwd)`" \
	--define "_icon openss7-logo-small.gif" \
	$(PACKAGE_OPTIONS)

RPMSOPTS = -vv \
	--define "_signature gpg" \
	--define "_gpg_path $(GPGHOME)" \
	--define "_gpg_name $(GPGUSER)" \
	--define "_gpgbin $(GPG)"

RPMTARGET = $(target)

EXTRA_DIST += $(PACKAGE_NAME).spec openss7-logo-small.gif

#
#   This builds an SRPM for the current target.  Note: rpm demands icon in
#   current directory
#
srpm:
	$(MAKE) $(AM_MAKEFLAGS) distdir='$(rpmdir)' dist
	$(mkinstalldirs) $(top_builddir)/BUILD $(top_builddir)/SRPMS $(top_builddir)/SPECS $(top_builddir)/SOURCES $(top_builddir)/RPMS
	/bin/cp -f $(top_srcdir)/openss7-logo-small.gif .
	$(RPMBUILD) -ts $(RPMOPTS) $(SRPMFLAGS) $(AM_SRPMFLAGS) --target $(target) -- $(rpmdir).tar.bz2

#
#   This is the type of thing that needs to be included in the master makefile
#   to build rpms for the current target, we also build any defined
#   AM_RPMTARGETS
#
rpms: srpm
	@for t in $(RPMTARGET) $(AM_RPMTARGETS) ; do \
		echo "$(RPMBUILD) --rebuild $(RPMOPTS) $(RPMFLAGS) $(AM_RPMFLAGS) --target $$t --" SRPMS/$(rpmdir).src.rpm; \
		$(RPMBUILD) --rebuild $(RPMOPTS) $(RPMFLAGS) $(AM_RPMFLAGS) --target $$t -- SRPMS/$(rpmdir).src.rpm; \
	done

sign: srpm
	@for f in $(RPM_ARCHIVES) ; do \
		if test -r $$f ; then \
			if test -n "$(GPGUSER)" ; then \
				echo "$(GPG) -ba -u $(GPGUSER) -- $$f" ; \
				$(GPG) -ba -u $(GPGUSER) -- $$f ; \
			else \
				echo "$(GPG) -ba -- $$f" ; \
				$(GPG) -ba -- $$f ; \
			fi ; \
		fi ; \
	done ; \
	if test -r SRPMS/$(rpmdir).src.rpm ; then \
		echo "$(RPM) --resign $(RPMSOPTS) -- SRPMS/$(rpmdir).src.rpm" ; \
		$(RPM) --resign $(RPMSOPTS) -- SRPMS/$(rpmdir).src.rpm ; \
	fi

rebuild:
	@if test -f SRPMS/$(rpmdir).src.rpm ; then :; else \
		$(MAKE) $(AM_MAKEFLAGS) srpm ; \
	fi ; \
	kernels=`find $(DESTDIR)/lib/modules -type d -name "2\.4\.*"` ; \
	targets="$(AM_RPMTARGETS)" ; \
	for t in $$targets ; do \
		tools= ; \
		for k in $$kernels ; do \
			k=`basename $$k` ; \
			if test -e $(DESTDIR)/lib/modules/$$k/build/Makefile ; then \
				echo "$(RPMBUILD) $(RPMFLAGS) $(AM_RPMFLAGS) $(RPMBOPTS) $$tools --define \"_kversion $$k\" --target $$t -- SRPMS/$(rpmdir).src.rpm" ; \
				$(RPMBUILD) $(RPMFLAGS) $(AM_RPMFLAGS) $(RPMBOPTS) $$tools --define "_kversion $$k" --target $$t -- SRPMS/$(rpmdir).src.rpm ; \
				tools='--without tools' ; \
			fi ; \
		done ; \
	done

distclean-rpms:
	rm -fr BUILD RPMS SOURCES SPECS SRPMS

else

sign: dist
	@for f in $(RPM_ARCHIVES) ; do \
		if test -r $$f ; then \
			if test -n "$(GPGUSER)" ; then \
				echo "$(GPG) -ba -u $(GPGUSER) -- $$f" ; \
				$(GPG) -ba -u $(GPGUSER) -- $$f ; \
			else \
				echo "$(GPG) -ba -- $$f" ; \
				$(GPG) -ba -- $$f ; \
			fi ; \
		fi ; \
	done

endif

distclean-sign:
	@for f in $(RPM_ARCHIVES) ; do \
		echo "rm -f $$f.asc" ; \
		rm -f $$f.asc ; \
	done

distclean-local: distclean-rpms distclean-sign

#.PHONY: srpm rpms sign

