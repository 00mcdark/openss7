+- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -+
|              Maximum Connect Data Size (optional)             |
+- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -+
|             Maximum Disconnect Data Size (optional)           |
+- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -+
|                  Maximum ESDU Size (optional)                 |
+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+
.)c
.)b
.lp
.(d
.#v
.ip \*#
