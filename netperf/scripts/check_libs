me=`basename $0`
retval=0

exec 5>$me.log

function echo_v()
{
	echo "$me:  : $1"
}
function echo_t()
{
	echo "$me: T: $1"
}
function echo_s()
{
	if test :"${MAINTAINER_MODE:-no}" = :verbose
	then
		echo "$me: S: $1"
	fi
	echo "$me:$2: S: $1" >&5
}
function echo_d()
{
	echo "$me:$2: D: $1" >&5
}
function echo_e()
{
	echo "$me: E: --- $1" >&2
	echo "$me:$2: E: $1" >&5
	retval=1
}
function echo_w()
{
	echo "$me: W: --- $1" >&2
	echo "$me:$2: W: $1" >&5
}

export -p | while read line
do
	echo_d "$line" $LINENO
done

if test :"${MAINTAINER_MODE:-no}" != :no
then
	echo_v "generating exported symbols"
	rm -f Libraries.map
	libs=
	for lib in $lib_LTLIBRARIES
	do
		echo_t "generating exported symbols for library $lib"
		l=`basename $lib`
		l=.libs/`echo $l | sed -e 's|\.la$|.a|'`
		if test -e $l
		then :
		else
			echo_e "cannot find library $l" $LINENO
			continue
		fi
		echo_v "creating symbol map for $l"
		echo_d "nm -s $l | egrep -- '\<B\>|\<D\>|\<T\>' | sed -e 's|^.* ||' >> Libraries.map" $LINENO
		nm -s $l | egrep -- '\<B\>|\<D\>|\<T\>' | sed -e 's|^.* ||' | tee -a Libraries.map \
			| while read line ; do echo_d "$line" $LINENO ; done
	done
	#
	# Check for manual pages for exported symbols.
	#
	echo_v "testing for manual pages for exported symbols"
	while read symbol
	do
		echo_t "testing for $symbol in section 2 or 3"
		echo_d "man -aw -M ${top_builddir}/doc/man:${top_builddir}/man -S 2:3 $symbol 2>&1" $LINENO
		if result=`man -aw -M ${top_builddir}/doc/man:${top_builddir}/man -S 2:3 $symbol 2>&1`
		then
			echo "$result" | while read line
			do
				echo_s "$line" $LINENO
			done
		else
			echo_e "$result" $LINENO
		fi
	done <Libraries.map
	rm -f Libraries.map
else
	echo_d "skipping test" $LINENO
	exit 77
fi

if test $retval -eq 1 ; then
	echo_v "--------------"
	echo_v "Error summary:"
	echo_v "--------------"
	egrep -- '\<E:' $top_builddir/$me.log >&2
	echo_v "--------------"
fi

exit $retval
