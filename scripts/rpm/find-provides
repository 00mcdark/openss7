# This script reads from stdin and outputs any relevant information that need to
# be included in the package.

ulimit -c 0

# First, find out where we are so that we can include other scripts.

args=("$@")
script=$(basename $0)
where=`(cd $(dirname $0); pwd)`

which_tool() {
    old_PATH="$PATH"
    PATH="$PATH:$where:/usr/lib/rpm:/usr/lib/rpm/redhat"
    which $1
    PATH="$old_PATH"
}

searchlist=($where /usr/lib/rpm /usr/lib/rpm/redhat)

# swallow the entire list, escaping quotes
IFS=$'\n'
filelist=($(grep -v '\.debug$'))

#classify files
filetypes=($(printf "%s\0" "${filelist[@]}" | xargs -0 -r file))

exelist=($(printf "%s\n" "${filetypes[@]}" | \
	egrep -v ':.* (commands|script) ' | grep ':.*executable' | \
	cut -d: -f1))

scriptlist=($(printf "%s\n" "${filetypes[@]}" | \
	egrep ':.* (commands|script) ' | \
	cut -d: -f1))

solist=($(printf "%s\n" "${filetypes[@]}" | \
	grep ':.*shared object' | \
	cut -d: -f1))
solist=($(printf "%s\0" "${filelist[@]}" | xargs -0 -r file -L | \
	grep ':.*shared object' | cut -d: -f1))

libtoollist=($(printf "%s\n" "${filelist[@]}" | grep '\.la$'))

perllist=($(printf "%s\n" "${filelist[@]}" | egrep '\.(pm|pl|ph)$'))

pythonlist=()

tcllist=()

ksymslist=($(printf "%s\n" "${filelist[@]}" | grep '\.ko$'))

jarlist=($(printf "%s\n" "${filelist[@]}" | egrep '\.(jar|war|zip)$' | xargs -r file -L \
	| grep ':.*Zip archive data' | cut -d: -f1))

# --- Shared objects.
if [ -n "$solist" ] ; then
    tool=$(which_tool "find-provides.so")
    if [ -n "$tool" -a -x "$tool" ] ; then
	printf "%s\n" "${solist[@]}" | \
	$tool "${args[@]}" | sort -u
    fi
fi

# --- libtool
if [ -n "$libtoollist" ] ; then
    tool=$(which_tool "find-provides.libtool")
    if [ -n "$tool" -a -x "$tool" ] ; then
	printf "%s\n" "${libtoollist[@]}" | \
	$tool "${args[@]}" | sort -u
    fi
fi

# --- Perl modules.
if [ -n "$perllist" ] ; then
    tool=$(which_tool "perl.prov")
    if [ -n "$tool" -a -x "$tool" ] ; then
	printf "%s\n" "${perllist[@]}" | \
	$tool "${args[@]}" | sort -u
    fi
fi

# --- Python modules.
if [ -n "$pythonlist" ] ; then
    tool=$(which_tool "python.prov")
    if [ -n "$tool" -a -x "$tool" ] ; then
	printf "%s\n" "${pythonlist[@]}" | \
	$tool "${args[@]}" | sort -u
    fi
fi

# --- Tcl modules.
if [ -n "$tcllist" ] ; then
    tool=$(which_tool "tcl.prov")
    if [ -n "$tool" -a -x "$tool" ] ; then
	printf "%s\n" "${tcllist[@]}" | \
	$tool "${args[@]}" | sort -u
    fi
fi

# --- extra scripts
for dir in "${searchlist[@]}" ; do
    if [ -d $dir/find-provides.d ] ; then
	for s in $dir/find-provides.d/*.prov ; do
	    if [ -x "$s" ] ; then
		var=$(echo "$s" | awk '{ gsub("[^a-zA-Z0-9]", "_"); print "extra_" $0; }')
		eval "tmp=\$$var"
		if [ :$tmp != :done ] ; then
		    printf "%s\n" "${filelist[@]}" | \
		    $s "${args[@]}" | sort -u
		    eval "$var=done"
		fi
	    fi
	done
    fi
done

# --- pkgconfig
tool=$(which_tool "find-provides.pkgconfig")
if [ -n "$tool" -a -x "$tool" ] ; then
    printf "%s\n" "${filelist[@]}" | \
    $tool "${args[@]}" | sort -u
fi

# -- kernel module exported symbols
if [ -n "$ksymslist" ] ; then
    tool=$(which_tool "find-provides.ksyms")
    if [ -n "$tool" -a -x "$tool" ] ; then
	printf "%s\n" "${ksymslist[@]}" | \
	$tool "${args[@]}"
    fi
fi

# -- Java jar files
tool=$(which_tool "javadeps")
if [ -n "$tool" -a -x "$tool" ] ; then
    for jar in "${jarlist[@]}" ; do
	unzip -p "$jar" | $tool --provides --rpmformat --keywords --starprov -- -
    done
fi

exit 0

# =============================================================================
