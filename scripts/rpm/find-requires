# This script reads from stdin and outputs any relevant information that need to
# be included in the package.

ulimit -c 0

# First, find out where we are so that we can include other scripts.

args=("$@")
script=$(basename $0)
where=`(cd $(dirname $0); pwd)`

which_tool() {
    old_PATH="$PATH"
    PATH="$PATH:$where:/usr/lib/rpm:/usr/lib/rpm/redhat"
    which $1
    PATH="$old_PATH"
}

remove_unprovided() {
    awk '
	(NF == 1) {
	    if (!($1 in requiredcaps))
		requiredcaps[$1] = 1
	    next
	}
	(NF == 3) {
	    requiredcaps[$1] = 0
	    requiredvers[$0] = 1
	    next
	}
	END {
	    for (cap in requiredcaps) {
		whatprovides = "rpm -q --qf '"'"'%{NAME}\\n'"'"' --whatprovides '"'"'" cap "'"'"' 2>/dev/null"
		while ((whatprovides | getline)) {
		    if (/no package/)
			break;
		    providedpkgs[$1] = 1
		    providedcaps[$1] = pkg
		}
		close(whatprovides)
	    }
	    for (pkg in providedpkgs) {
		provides = "rpm -q --provides " pkg " 2>/dev/null"
		while ((provides | getline)) {
		    if (NF == 1) {
			if (!($1 in providedcaps))
			    providedcaps[$1] = pkg
			continue
		    }
		    if (NF == 3) {
			providedcaps[$1] = ""
			providedvers[$0] = pkg
			continue
		    }
		}
		close(provides)
	    }
	    j = 1
	    k = 1
	    for (cap in requiredcaps) {
		if (!requiredcaps[cap])
		    continue
		if (cap in providedcaps) {
		    if (!providedcaps[cap])
			continue
		    result[j] = cap
		    j++
		    continue
		}
		unprovided[k] = cap
		k++
	    }
	    for (ver in requiredvers) {
		if (ver in providedvers) {
		    result[j] = ver
		    j++
		    continue
		}
		unprovided[k] = ver
		k++
	    }
	    n = asort(result)
	    for (i = 1; i <= n; i++)
		print result[i]
	    n = asort(unprovided)
	    if (n) {
		cat = "cat >&2"
		print "Warning: unprovided capabilities:" | cat
		for (i = 1; i <= n; i++)
		    print "   " unprovided[i] | cat
	    }
	}
    '
}

searchlist=($where /usr/lib/rpm /usr/lib/rpm/redhat)

# swallow the entire list, escaping quotes
IFS=$'\n'
filelist=($(grep -v '\.debug$'))

#classify files
filetypes=($(printf "%s\0" "${filelist[@]}" | xargs -0 -r file))

exelist=($(printf "%s\n" "${filetypes[@]}" | \
	egrep -v ':.* (commands|script) ' | grep ':.*executable' | \
	cut -d: -f1))

scriptlist=($(printf "%s\n" "${filetypes[@]}" | \
	egrep ':.* (commands|script) ' | \
	cut -d: -f1))

solist=($(printf "%s\n" "${filetypes[@]}" | \
	grep ':.*shared object' | \
	cut -d: -f1))
solist=($(printf "%s\0" "${filelist[@]}" | xargs -0 -r file -L | \
	grep ':.*shared object' | cut -d: -f1))

libtoollist=($(printf "%s\n" "${filelist[@]}" | grep '\.la$'))

perllist=($(printf "%s\n" "${filelist[@]}" | egrep '\.(pm|pl|ph)$'))

pythonlist=()

tcllist=()

ksymslist=($(printf "%s\n" "${filelist[@]}" | grep '\.ko$'))

jarlist=($(printf "%s\n" "${filelist[@]}" | egrep '\.(jar|war|zip)$' | xargs -r file -L \
	| grep ':.*Zip archive data' | cut -d: -f1))

# # --- Executables.
# if [ -n "$exelist" ] ; then
#     tool=$(which_tool "find-requires.exe")
#     if [ -n "$tool" -a -x "$tool" ] ; then
# 	  printf "%s\n" "${solist[@]}" "${exelist[@]}" | \
# 	  $tool "${args[@]}" | sort -u
#     fi
# fi

# --- Shared objects.
if [ -n "$solist" -o -n "$exelist" ] ; then
    tool=$(which_tool "find-requires.so")
    if [ -n "$tool" -a -x "$tool" ] ; then
	printf "%s\n" "${solist[@]}" "${exelist[@]}" | \
	$tool "${args[@]}"
    fi
fi

# --- libtool
if [ -n "$libtoollist" ] ; then
    tool=$(which_tool "find-requires.libtool")
    if [ -n "$tool" -a -x "$tool" ] ; then
	printf "%s\n" "${libtoollist[@]}" | \
	$tool "${args[@]}"
    fi
fi

# --- Scripts.
if [ -n "$scriptlist" ] ; then
    for f in "${scriptlist[@]}" ; do
	if [ -r "$f" ] ; then
	    interp=$(awk '
		(FNR == 1) {
		    if (/^#!/) {
			sub("^#![[:space:]]*", "")
			sub("[[:space:]]+.*", "")
			print
		    }
		    nextfile
		}' "$f")
	    if [ -n "$interp" ] ; then
		printf "%s\n" "$interp"
		case $interp in
		    (*/perl) perllist=("${perllist[@]}" "$f")
			;;
		    (*/wish) tcllist=("${tcllist[@]}" "$f")
			;;
		    (*/python) pythonlist=("${pythonlist[@]}" "$f")
			;;
		    (*/sh|*/bash)
			wish=$(awk '
			    (FNR == 6) {
				nextfile
			    }
			    /^exec[[:space:]]+wish[[:space:]]/ {
				print "wish"
				nextfile
			    }' "$f")
			if [ :$wish = :wish ] ; then
			    tcllist=("${tcllist[@]}" "$f")
			fi
			;;
		    (*)
			;;
		esac
	    fi
	fi
    done
fi

# --- Perl modules.
if [ -n "$perllist" ] ; then
    tool=$(which_tool "perl.req")
    if [ -n "$tool" -a -x "$tool" ] ; then
	printf "%s\n" "${perllist[@]}" | \
	$tool "${args[@]}"
    fi
fi

# --- Python modules.
if [ -n "$pythonlist" ] ; then
    tool=$(which_tool "python.req")
    if [ -n "$tool" -a -x "$tool" ] ; then
	printf "%s\n" "${pythonlist[@]}" | \
	$tool "${args[@]}"
    fi
fi

# --- Tcl modules.
if [ -n "$tcllist" ] ; then
    tool=$(which_tool "tcl.req")
    if [ -n "$tool" -a -x "$tool" ] ; then
	printf "%s\n" "${tcllist[@]}" | \
	$tool "${args[@]}"
    fi
fi

# --- Kernel module imported symbols.
if [ -n "$ksymslist" ] ; then
    tool=$(which_tool "find-requires.ksyms")
    if [ -n "$tool" -a -x "$tool" ] ; then
	printf "%s\n" "${ksymslist[@]}" | \
	$tool "${args[@]}"
    fi | remove_unprovided
    # we built them, so anything unprovided is a false positive
    # this is necessary primarily for CentOS that messes up the
    # kernel symbol sets
fi

# -- Java jar files
tool=$(which_tool "javadeps")
if [ -n "$jarlist" ] ; then
    tool=$(which_tool "find-requires.java")
    if [ -n "$tool" -a -x "$tool" ] ; then
	printf "%s\n" "${jarlist[@]}" | \
	$tool "${args[@]}"
    fi | remove_unprovided
    # we built them, so anything unprovided is a false positive 
fi

exit 0

# =============================================================================
