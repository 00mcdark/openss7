me=`basename $0`
retval=0

exec 5>$me.log

export -p >&5

KERNEL_SYSMAP="$DESTDIR$ksysmap"

function echo_v()
{
#	if test :"${MAINTAINER_MODE:-no}" = :yes ; then
		echo "$me:  : $1"
#	fi
}
function echo_t()
{
#	if test :"${MAINTAINER_MODE:-no}" = :verbose ; then
		echo "$me: T: $1"
#	fi
}
function echo_s()
{
	if test :"${MAINTAINER_MODE:-no}" = :verbose ; then
		echo "$me: S: $1"
	fi
}
function echo_d()
{
	echo "$me: D: $1" >&5
}
function echo_e()
{
	echo "$me: E: --- $1" >&2
	echo "$me: E: $1" >&5
}
function echo_w()
{
#	if test :"${MAINTAINER_MODE:-no}" != :no ; then
		echo "$me: W: --- $1" >&2
#	fi
	echo "$me: W: $1" >&5
}

echo_v "testing for undefined symbols in kernel modules"
if test -z "$KERNEL_SYSMAP"
then
	echo_w "KERNEL_SYSMAP is empty, skipping test"
	exit 77
fi
if test -z "$KERNEL_MODULES"
then
	echo_w "KERNEL_MODULES is empty, skipping test"
	exit 77
fi
echo_d "using system map $KERNEL_SYSMAP"
echo_d "generating module symbol map"
rm -f Modules.map Modules.exp
for module in $KERNEL_MODULES
do
	echo_v "creating defined symbol map for $module"
	echo_d "nm -s $module | egrep '\<B\>|\<D\>|\<T\>' >> Modules.map"
	nm -s $module | egrep '\<B\>|\<D\>|\<T\>' | tee -a Modules.map \
		| while read line ; do echo_d $line ; done
	echo_v "creating exported symbol map for $module"
	echo_d "nm -s $module | egrep '\<R\> __ksymtab_' | sed -e 's|^.*\<R\> __ksymtab_||' >> Modules.exp"
	nm -s $module | egrep '\<R\> __ksymtab_' | sed -e 's|^.*\<R\> __ksymtab_||' | tee -a Modules.exp \
		| while read line ; do echo_d $line ; done
done
for module in $KERNEL_MODULES
do
	thismodule=
	if test -f ./$module
	then
		echo_v "testing symbols in kernel module $module"
#		symbollist=`objdump -t $module | egrep '\*UND\*' | sed -e 's|^.* ||'`
#		for symbol in $symbollist
		echo_d "nm -s $module | egrep '\<U\>' | sed -e 's|^.* ||' > Modules.und"
		nm -s $module | egrep '\<U\>' | sed -e 's|^.* ||' | tee Modules.und \
			| while read line ; do echo_d $line ; done
		while read symbol
		do
			if test "$symbol" = "__this_module"
			then
				thismodule=found
				continue
			fi
			uv_symbol=`echo $symbol | sed -r -e 's|_R(smp_)?[[:xdigit:]]{8}$||'`
			# we need to find the module name in the symbol table
			# echo it for now
			echo_t "testing symbol $symbol"
			: #echo_t "testing Modules.map for $symbol"
			echo_d "egrep \"\<$symbol\>\" Modules.map 2>&1 >/dev/null"
			if ( egrep "\<$symbol\>" Modules.map 2>&1 >/dev/null)
			then
				echo_s "symbol $symbol found (Modules.map)"
			else
				: #echo_t "testing System.map for $symbol"
				echo_d "egrep \"\<$symbol\>\" $KERNEL_SYSMAP 2>&1 >/dev/null"
				if ( egrep "\<$symbol\>" $KERNEL_SYSMAP 2>&1 >/dev/null)
				then
					echo_s "symbol $symbol found (System.map)"
				else
					: #echo_t "testing System.map for $uv_symbol"
					echo_d "egrep \"\<$uv_symbol\>\" $KERNEL_SYSMAP 2>&1 >/dev/null"
					if ( egrep "\<$uv_symbol\>" $KERNEL_SYSMAP 2>&1 >/dev/null)
					then
						echo_s "symbol $symbol found (System.map)[unversioned]"
					else
						echo_w "cannot find symbol $uv_symbol"
						symbols="${symbols}${symbols:+ }${module}:${symbol}"
					fi
				fi
			fi
		done <Modules.und
	else
		echo_e "kernel module $module does not exist" >&2
		modules="${modules}${modules:+ }$module"
	fi
done

if test -z "$modules"
then
	echo_s "all modules found"
else
	echo_e "the following modules were not found:"
	for module in $modules
	do
		echo_e "$module"
	done
fi
if test -z "$symbols"
then
	echo_s "all symbols in all modules found"
else
	echo_e "the following symbols were not found:"
	for symbol in $symbols
	do
		echo_e "$symbol"
	done
fi

#
# Check for manual pages for exported symbols.
#
echo_v "testing for manual pages for exported symbols"
while read symbol
do
	found=
	symbol=`echo $symbol | sed -r -e 's|_R(smp_)?[[:xdigit:]]{8}$||'`
	echo_t "testing manual page for symbol $symbol"
	for dir in ./doc $srcdir/doc . $srcdir
	do
		for section in 9 9lis
		do
			f="$dir/man/man$section/$symbol.$section"
			if test -e $f
			then
				echo_s "found manual page for $symbol, $f"
				found="${found}${found:+ }$f"
			fi
		done
	done
	if test -z "$found"
	then
#		if test :"${MAINTAINER_MODE:-no}" != :no ; then
			echo_e "cannot find manpage for symbol $symbol"
			retval=1
			continue;
#		else
#			echo_w "cannot find manpage for symbol $symbol"
#		fi
	fi
done <Modules.exp

rm -f Modules.map Modules.und Modules.exp

if test -n "$symbols" -o -n "$modules"
then
	retval=1
fi

if test $retval -eq 1 ; then
	echo_v "--------------"
	echo_v "Error summary:"
	echo_v "--------------"
	egrep '\<E:' $top_builddir/$me.log >&2
	echo_v "--------------"
fi

exit $retval

