boxwid = 4*boxwid/3
##
define subtree @
	line from $1.s \
	     to   ($1.s.x-boxwid, $1.s.y-3*boxht)
	line from ($1.s.x-boxwid, $1.s.y-3*boxht) \
	     to   ($1.s.x+boxwid, $1.s.y-3*boxht)
	line from ($1.s.x+boxwid, $1.s.y-3*boxht) \
	     to $1.s
	move to ($1.s.x, $1.s.y-boxht*2); "$\cdots$"
@
