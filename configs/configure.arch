#!/bin/bash
set -x
where=`dirname $0`
srcdir=`(cd $where/..; pwd)`
# use native tools for arch
export PATH=/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/sbin:/usr/local/bin:/usr/bin/vendor_perl:/usr/bin/core_perl:~/bin
$srcdir/configure \
	WFLAGS='-Wno-unused-but-set-variable -Wno-system-headers -Wno-endif-labels' \
	--libexecdir='${exec_prefix}/lib' \
	--with-pkg-distdir=/u6/repo \
	--with-pkg-repodir=/u5/repo \
	--enable-maintainer-mode \
	$* \
	2>&1 | tee configure.log
