##
# These targets are responsible for installing the network configuration
# information into the /etc/netconfig database.  This is performed by looking
# for the /etc/netconfig.d directory, installing this package's file into that
# directory under the package name, and then rebuilding the /etc/netconfig
# file.  If the /etc/netconfig file does not exist, then the file is simply
# installed in the /etc/netconfig.d directory (it might be an rpm or deb
# build).
##

install-netconfig: src/util/sysconfig/netconfig
	@$(ECHO) "D: Making $@ in `pwd`"
	@$(NORMAL_INSTALL)
	$(mkinstalldirs) $(DESTDIR)$(sysconfdir)/netconfig.d
	$(INSTALL_DATA) $< $(DESTDIR)$(sysconfdir)/netconfig.d/@PACKAGE_LCNAME@

##
# If the /etc/netconfig file exists after we have placed the /etc/netconfig.d
# subdirectory entry, then check if it is one we built.  If it is, simply empty
# it and start again, otherwise if it is not one we built it likely belongs to
# the libtirpc package so do not calculate a new one: use the netconfig.xnsl
# name instead.  If /etc/netconfig.xnsl already exists, use this alternate file
# in preference to /etc/netconfig.  Also, if this is an rpm, dpkg or target
# installation, use the alternate file name to avoid clobbering the nfs4 file
# during final installation.  If there are no entries in the /etc/netconfig.d
# subdirectory, assume that we are being removed.  Note that if nothing really
# gets installed in the /etc/netconfig.d subdirectory, calling this has no
# overall effect.
#
# Note: do not do post-netconfig when building RPMS because each RPM will
# conflict on the /etc/netconfig.xnsl file.
##

post-netconfig:
	@$(ECHO) "D: Making $@ in `pwd`"
	@t="$(DESTDIR)$(sysconfdir)/netconfig" ; \
	a="$(DESTDIR)$(sysconfdir)/netconfig.xnsl" ; \
	d="$(DESTDIR)$(sysconfdir)/netconfig.d" ; \
	if test -n '$(DESTDIR)' -a ! -e $$t -a ! -e $$a ; then \
		exit 0 ; \
	fi ; \
	if test -e $$t ; then \
		if ! grep '^# Generated from netconfig.d' $$t >/dev/null 2>&1 ; then \
			t="$$a" ; \
		fi ; \
	else \
		if test -e $$a -o -n '$(DESTDIR)'; then \
			t="$$a" ; \
		fi ; \
	fi ; \
	$(ECHO) "$(ECHO) '# Generated from netconfig.d by @PACKAGE_LCNAME@ '`date -uI` > $$t.tmp" ; \
	$(ECHO) '# Generated from netconfig.d by @PACKAGE_LCNAME@ '`date -uI` > $$t.tmp ; \
	found='no' ; files="$$d/*" ; \
	for f in $$files ; do \
		if test -f $$f -a "$$f" = "$$d/strnsl" ; then \
			case $$f in \
				(*.rpmsave|*.rpmnew|*.rpmorig) ;; \
				(*) $(ECHO) "sed -e '/^[[:space:]]*##/d;/^[[:space:]]*$$/d' $$f >> $$t.tmp" ; \
				    sed -e '/^[[:space:]]*##/d;/^[[:space:]]*$$/d' $$f >> $$t.tmp ; \
				    found='yes' ;; \
			esac ; \
		fi ; \
	done ; \
	for f in $$files ; do \
		if test -f $$f -a "$$f" != "$$d/strnsl" ; then \
			case $$f in \
				(*.rpmsave|*.rpmnew|*.rpmorig) ;; \
				(*) $(ECHO) "sed -e '/^[[:space:]]*##/d;/^[[:space:]]*$$/d' $$f >> $$t.tmp" ; \
				    sed -e '/^[[:space:]]*##/d;/^[[:space:]]*$$/d' $$f >> $$t.tmp ; \
				    found='yes' ;; \
			esac ; \
		fi ; \
	done ; \
	if test :$$found = :no ; then \
		$(ECHO) "rm -f $$t $$t.tmp" ; \
		rm -f $$t $$t.tmp ; \
	else \
		$(ECHO) "mv -f $$t.tmp $$t" ; \
		mv -f $$t.tmp $$t ; \
	fi ; \
	if test "$$t" != "$$a" ; then \
		$(ECHO) "rm -f $$a" ; \
		rm -f $$a ; \
	fi

uninstall-netconfig:
	@$(ECHO) "D: Making $@ in `pwd`"
	@$(NORMAL_UNINSTALL)
	rm -f $(DESTDIR)/$(sysconfdir)/netconfig.d/@PACKAGE_LCNAME@


