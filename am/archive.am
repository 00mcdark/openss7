#!
#! Archive Build Targets:
#! ----------------------
#!
#! On all systems, or systems supporting packaging tools and tarball install
#! source repository creation tools, the following targets are used to manage
#! tarball install source repository meta data files.
#!
$(tardir)/MD5SUMS: $(tardir)/ARCHIVE.gz $(tardir)/INDEX.gz $(tardir)/ls-lR.gz
	if ( $(MD5SUM) --version >/dev/null 2>&1 ); then \
		( cd $(tardir); find . -maxdepth 1 -type f | LANG= sort | \
		  egrep -v '\.((tar\.|shar\.|[t]?)(gz|bz2|[zZ]|lzma|xz)|zip|cpi|cpio|iso|rpm|[ud]?deb)$$' | \
		  sed 's,^\./,,' | while read f; do \
		  	case $$f in (*MD5SUMS*|*SHA1SUMS*|.*) continue ;; esac ; \
		  	$(MD5SUM) $$f; \
		  done ) > $@; \
	else touch $@; fi

$(tardir)/MD5SUMS.meta: $(tardir)/MD5SUMS
	if ( $(SHA1SUM) --version >/dev/null 2>&1 ); then \
		( cd $(tardir); $(MD5SUM) MD5SUMS ) > $@; \
	else touch $@; fi

$(tardir)/SHA1SUMS: $(tardir)/ARCHIVE.gz $(tardir)/INDEX.gz $(tardir)/ls-lR.gz
	if ( $(SHA1SUM) --version >/dev/null 2>&1 ); then \
		( cd $(tardir); find . -maxdepth 1 -type f | LANG= sort | \
		  egrep -v '\.((tar\.|shar\.|[t]?)(gz|bz2|[zZ]|lzma|xz)|zip|cpi|cpio|iso|rpm|[ud]?deb)$$' | \
		  sed 's,^\./,,' | while read f; do \
		  	case $$f in (*MD5SUMS*|*SHA1SUMS*|.*) continue ;; esac ; \
			$(SHA1SUM) $$f; \
		  done ) > $@; \
	else touch $@; fi

$(tardir)/SHA1SUMS.meta: $(tardir)/SHA1SUMS
	if ( $(SHA1SUM) --version >/dev/null 2>&1 ); then \
		( cd $(tardir); $(SHA1SUM) SHA1SUMS ) > $@; \
	else touch $@; fi


$(tardir)/ls-lR.gz:
	@$(ECHO) "(cd $(tardir); ls -lR | gzip -c > $@)"; \
	( cd $(tardir); ls -lR | gzip -c > $@)

$(tardir)/INDEX.gz:
	@$(ECHO) "(cd $(tardir); ls -A1 | gzip -c > $@)"; \
	( cd $(tardir); ls -A1 | gzip -c > $@)

$(tardir)/ARCHIVE.gz:
	@$(ECHO) "cat /dev/null > $@" ; \
	cat /dev/null > $@; \
	find $(tardir) -follow -maxdepth 1 -type f | LANG= sort | sed 's,^$(tardir)/,,' | while read f ; do \
		case "$$f" in \
			(*.tar) \
				$(ECHO) "$(AMTAR) tvvf $(tardir)/$$f | sed \"s,^,$$f:=,\" | tr '=' '\t' | gzip -c >> $@" ; \
				$(AMTAR) tvvf $(tardir)/$$f | sed "s,^,$$f:=," | tr '=' '\t' | gzip -c >> $@ || : \
				;; \
			(*.tgz|*.tar.gz|*.tar.[zZ]) \
				$(ECHO) "gzip -dc $(tardir)/$$f | $(AMTAR) tvvf - | sed \"s,^,$$f:=,\" | tr '=' '\t' | gzip -c >> $@" ; \
				gzip -dc $(tardir)/$$f | $(AMTAR) tvvf - | sed "s,^,$$f:=," | tr '=' '\t' | gzip -c >> $@ || : \
				;; \
			(*.tbz2|*.tar.bz2) \
				$(ECHO) "bzip2 -dc $(tardir)/$$f | $(AMTAR) tvvf - | sed \"s,^,$$f:=,\" | tr '=' '\t' | gzip -c >> $@" ; \
				bzip2 -dc $(tardir)/$$f | $(AMTAR) tvvf - | sed "s,^,$$f:=," | tr '=' '\t' | gzip -c >> $@ || : \
				;; \
			(*.tlzma|*.tar.lzma) \
				$(ECHO) "lzma -dc $(tardir)/$$f | $(AMTAR) tvvf - | sed \"s,^,$$f:=,\" | tr '=' '\t' | gzip -c >> $@" ; \
				lzma -dc $(tardir)/$$f | $(AMTAR) tvvf - | sed "s,^,$$f:=," | tr '=' '\t' | gzip -c >> $@ || : \
				;; \
			(*.txz|*.tar.xz) \
				$(ECHO) "xz -dc $(tardir)/$$f | $(AMTAR) tvvf - | sed \"s,^,$$f:=,\" | tr '=' '\t' | gzip -c >> $@" ; \
				xz -dc $(tardir)/$$f | $(AMTAR) tvvf - | sed "s,^,$$f:=," | tr '=' '\t' | gzip -c >> $@ || : \
				;; \
			(*.t[zZ]|*.tar.[zZ]) \
				$(ECHO) "uncompress -c $(tardir)/$$f | $(AMTAR) tvvf - | sed \"s,^,$$f:=,\" | tr '=' '\t' | gzip -c >> $@" ; \
				uncompress -c $(tardir)/$$f | $(AMTAR) tvvf - | sed "s,^,$$f:=," | tr '=' '\t' | gzip -c >> $@ || : \
				;; \
			(*.rpm) \
