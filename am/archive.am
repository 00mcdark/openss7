				$(DPKG) --contents $(tardir)/$$f | sed "s,^,$$f:=," | tr '=' '\t' | gzip -c >> $@ || : \
				;; \
			(*.cpi|*.cpio) \
				$(ECHO) "cpio -itv < $(tardir)/$$f | sed \"s,^,$$f:=,\" | tr '=' '\t' | gzip -c >> $@" ; \
