$(STRCONF_INPUT): $(CONFIG_CLEAN_FILES) $(STRCONF_CONFIGS)
	$(AM_V_GEN)$(SHELL) ./config.status Makefile strconf

if WITH_PACKAGES
$(STRCONF_PKGRULE): $(STRCONF_PKGRULE).in
	$(AM_V_GEN)$(SHELL) ./config.status Makefile strconf
endif

$(STRCONF_CONFIG): $(STRCONF_INPUT) $(STRCONF_SCRIPT)
	$(AM_V_GEN)$(STRCONF) --hconfig=$(STRCONF_CONFIG) --package=$(STRCONF_PACKAGE) -B${STRCONF_MINORSZ} -b$(STRCONF_MAJBASE) -i$(STRCONF_MIDBASE) $(STRCONF_INPUT)

$(STRCONF_MODCONF): $(STRCONF_INPUT) $(STRCONF_SCRIPT)
	$(AM_V_GEN)$(STRCONF) --modconf=$(STRCONF_MODCONF) --package=$(STRCONF_PACKAGE) -B${STRCONF_MINORSZ} -b$(STRCONF_MAJBASE) -i$(STRCONF_MIDBASE) $(STRCONF_INPUT)

$(STRCONF_MKNODES): $(STRCONF_INPUT) $(STRCONF_SCRIPT)
	$(AM_V_GEN)$(STRCONF) --makenodes=$(STRCONF_MKNODES) --package=$(STRCONF_PACKAGE) -B${STRCONF_MINORSZ} -b$(STRCONF_MAJBASE) -i$(STRCONF_MIDBASE) $(STRCONF_INPUT)

$(STRCONF_DRVCONF): $(STRCONF_INPUT) $(STRCONF_SCRIPT)
	$(AM_V_GEN)$(STRCONF) --driverconf=$(STRCONF_DRVCONF) --package=$(STRCONF_PACKAGE) -B${STRCONF_MINORSZ} -b$(STRCONF_MAJBASE) -i$(STRCONF_MIDBASE) $(STRCONF_INPUT)

$(STRCONF_CONFMOD): $(STRCONF_INPUT) $(STRCONF_SCRIPT)
	$(AM_V_GEN)$(STRCONF) --confmodules=$(STRCONF_CONFMOD) --package=$(STRCONF_PACKAGE) -B${STRCONF_MINORSZ} -b$(STRCONF_MAJBASE) -i$(STRCONF_MIDBASE) $(STRCONF_INPUT)

$(STRCONF_MAKEDEV): $(STRCONF_INPUT) $(STRCONF_SCRIPT)
	$(AM_V_GEN)$(STRCONF) --strmknods=$(STRCONF_MAKEDEV) --package=$(STRCONF_PACKAGE) -B${STRCONF_MINORSZ} -b$(STRCONF_MAJBASE) -i$(STRCONF_MIDBASE) $(STRCONF_INPUT)

$(STRCONF_STSETUP): $(STRCONF_INPUT) $(STRCONF_SCRIPT)
	$(AM_V_GEN)$(STRCONF) --strsetup=$(STRCONF_STSETUP) --package=$(STRCONF_PACKAGE) -B${STRCONF_MINORSZ} -b$(STRCONF_MAJBASE) -i$(STRCONF_MIDBASE) $(STRCONF_INPUT)

$(STRCONF_STRLOAD): $(STRCONF_INPUT) $(STRCONF_SCRIPT)
	$(AM_V_GEN)$(STRCONF) --strload=$(STRCONF_STRLOAD) --package=$(STRCONF_PACKAGE) -B${STRCONF_MINORSZ} -b$(STRCONF_MAJBASE) -i$(STRCONF_MIDBASE) $(STRCONF_INPUT)

if WITH_PACKAGES
$(STRCONF_PKGRULE).in: $(STRCONF_INPUT) $(STRCONF_SCRIPT)
	$(AM_V_GEN)$(STRCONF) --pkgrules=$(STRCONF_PKGRULE).in --packagedir=$(STRCONF_BPKGDIR) --package=$(STRCONF_PACKAGE) -B${STRCONF_MINORSZ} -b$(STRCONF_MAJBASE) -i$(STRCONF_MIDBASE) $(STRCONF_INPUT)
endif

ALL_LOCAL += \
	$(STRCONF_INPUT) \
	$(STRCONF_CONFIG) \
	$(STRCONF_MODCONF) \
	$(STRCONF_MKNODES) \
	$(STRCONF_DRVCONF) \
	$(STRCONF_CONFMOD) \
	$(STRCONF_MAKEDEV) \
	$(STRCONF_STSETUP) \
	$(STRCONF_STRLOAD)

if WITH_PACKAGES
ALL_LOCAL += \
	$(STRCONF_PKGRULE)
endif

clean-strconf:
	@$(ECHO_V) "D: Making $@ in `pwd`"

distclean-strconf:
	@$(ECHO_V) "D: Making $@ in `pwd`"
	rm -f -- $(STRCONF_INPUT)
	rm -f -- $(STRCONF_CONFIG)
	rm -f -- $(STRCONF_MODCONF)
	rm -f -- $(STRCONF_MKNODES)
	rm -f -- $(STRCONF_DRVCONF)
	rm -f -- $(STRCONF_CONFMOD)
	rm -f -- $(STRCONF_MAKEDEV)
	rm -f -- $(STRCONF_STSETUP)
	rm -f -- $(STRCONF_STRLOAD)
if WITH_PACKAGES
	rm -f -- $(STRCONF_PKGRULE) $(STRCONF_PKGRULE).in
endif

maintainer-clean-strconf:
	@$(ECHO_V) "D: Making $@ in `pwd`"

CLEAN_LOCAL		+= clean-strconf
DISTCLEAN_LOCAL		+= distclean-strconf
MAINTAINER_CLEAN_LOCAL	+= maintainer-clean-strconf
dist_noinst_SCRIPTS	+= $(STRCONF_SCRIPT)
EXTRA_SCRIPTS		+= scripts/strconf-sh

