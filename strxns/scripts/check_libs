me=`basename $0`
retval=0

exec 5>$me.log

export -p >&5

function echo_v()
{
#	if test :"${MAINTAINER_MODE:-no}" = :yes ; then
		echo "$me:  : $1"
#	fi
}
function echo_t()
{
#	if test :"${MAINTAINER_MODE:-no}" = :verbose ; then
		echo "$me: T: $1"
#	fi
}
function echo_s()
{
	if test :"${MAINTAINER_MODE:-no}" = :verbose ; then
		echo "$me: S: $1"
	fi
}
function echo_d()
{
	echo "$me: D: $1" >&5
}
function echo_e()
{
	echo "$me: E: $1" >&2
	echo "$me: E: $1" >&5
}
function echo_w()
{
	if test :"${MAINTAINER_MODE:-no}" != :no ; then
		echo "$me: W: $1" >&2
	fi
	echo "$me: W: $1" >&5
}

echo_v "generating exported symbols"
rm -f Libraries.map
libs=
for lib in $lib_LTLIBRARIES
do
	echo_t "generating exported symbols for library $lib"
	l=`basename $lib`
	l=.libs/`echo $l | sed -e 's|\.la$|.a|'`
	if test -e $l
	then :
	else
		echo_e "cannot find library $l"
		retval=1
		continue
	fi
	echo_v "creating symbol map for $l"
	echo_d "nm -s $l | egrep '\<B\>|\<D\>|\<T\>' | sed -e 's|^.* ||' >> Libraries.map"
	nm -s $l | egrep '\<B\>|\<D\>|\<T\>' | sed -e 's|^.* ||' >> Libraries.map
done

#
# Check for manual pages for exported symbols.
#
echo_v "testing for manual pages for exported symbols"
while read symbol
do
	found=
	echo_t "test for manual page for symbol $symbol"
	for dir in ./doc $srcdir/doc . $srcdir
	do
		for section in 2 3
		do
			f="$dir/man/man$section/$symbol.$section"
			if test -e $f
			then
				echo_s "found manual page for $symbol, $f"
				found="${found}${found:+ }$f"
			fi
			if test -e ${f}s
			then
				echo_s "found manual page for $symbol, ${f}s"
				found="${found}${found:+ }${f}s"
			fi
		done
	done
	if test -z "$found"
	then
		if test :"${MAINTAINER_MODE:-no}" != :no ; then
			echo_e "cannot find manpage for symbol $symbol"
			retval=1
			continue;
		else
			echo_w "cannot find manpage for symbol $symbol"
		fi
	fi
done <Libraries.map

rm -f Libraries.map

if test $retval -eq 1 ; then
	echo_v "--------------"
	echo_v "Error summary:"
	echo_v "--------------"
	egrep '\<E:' $top_builddir/$me.log >&2
	echo_v "--------------"
fi

exit $retval
