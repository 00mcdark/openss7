@mscript_header@

configure_modconf() { :
    #
    # For modconf entries, we remove reference to our include from the modules.conf file and then
    # add our include back to the file.
    #
    conf_old=$tmppath/modules.conf
    if [ -f $conf_old ] ; then
	conf_new=$tmppath/modules.conf.new.$$
	conf_tmp=$tmppath/modules.conf.tmp.$$
	cp -f -- $conf_old $conf_new
	sed -e '\|^[[:space:]]*include[[:space:]][[:space:]]*'"$modutildir/$name"'[[:space:]]*$|d' $conf_new > $conf_tmp
	mv -f -- $conf_tmp $conf_new
	echo "include $modutildir/$name" >> $conf_new
	chmod --reference=$conf_old -- $conf_new
	cp -f -b --suffix=.dpkg-save -- $conf_new $conf_old
	rm -f -- $conf_new
    fi
}

configure_preloads() { :
    #
    # For preloads we remove reference to any of our modules from the preloads file and then add
    # only our preloadable modules back to the file.
    #
    prel_fil="@preloads@"
    if [ -f $prel_fil ] ; then
	prel_tmp=$tmppath/modprobe.preload.tmp.$$
	prel_new=$tmppath/modprobe.preload.new.$$
	cp -f -- $prel_fil $prel_new
	for m in $modules ; do
	    sed -e '\|^[[:space:]]*'"$m"'[[:space:]]*$|d' $prel_new > $prel_tmp
	    mv -f -- $prel_tmp $prel_new
	done
	for p in $preloads ; do
	    echo "$p" >> $prel_new
	done
        chmod --reference=$prel_fil -- $prel_new
        cp -f -b --suffix=.dpkg-save -- $prel_new $prel_fil
        rm -f -- $prel_new
    fi
}

configure_netconfig() { :
    #
    # At the end of a fresh install we need to rebuild the netconfig database, but only if the
    # netconfig database was build by us or does not exist.
    #
    if [ "x$netconfig" != x ] ; then
	t="$sysconfdir/netconfig"
	a="${t}.xnsl"
	d="${t}.d"
	if [ -f $t ] ; then
	    if ! grep '^# Generated from netconfig.d' $t >/dev/null 2>&1 ; then
		t="${a}"
	    fi
	fi
	echo '# Generated from netconfig.d by @PACKAGE_LCNAME@ '`date -uI` > ${t}.tmp
	found='no'
	files="$d/*"
	for f in $files ; do
	    if [ -f $f -a $f = "$d/strnsl" ] ; then
		case $f in
		    (*.rpmsave|*.rpmnew|*.rpmorig) ;;
		    (*.dpkg-save|*.dpkg-new|*.dpkg-orig) ;;
		    (*) sed -e '/^[[:space:]]*##/d;/^[[:space:]]*$/d' $f >> ${t}.tmp ; found='yes' ;;
		esac
	    fi
	done
	for f in $files ; do
	    if [ -f $f -a $f != "$d/strnsl" ] ; then
		case $f in
		    (*.rpmsave|*.rpmnew|*.rpmorig) ;;
		    (*.dpkg-save|*.dpkg-new|*.dpkg-orig) ;;
		    (*) sed -e '/^[[:space:]]*##/d;/^[[:space:]]*$/d' $f >> ${t}.tmp ; found='yes' ;;
		esac
	    fi
	done
	if [ "$found" = "no" ] ; then
	    rm -f $t ${t}.tmp
	else
	    mv -f ${t}.tmp $t
	fi
	if [ "$t" != "$a" ] ; then
	    rm -f $a
	fi
    fi
}

configure_sock2path() { :
    #
    # At the end of a fresh install, we need to rebuild the sock2path database.
    #
    if [ "x$sock2path" != x ] ; then
	t="$sysconfdir/sock2path"
	cp -f -b --suffix=.dpkg-save -- /dev/null $t
	for f in "${t}.d/*" ; do
	    if [ -f $f ] ; then
		case $f in
		    (*.rpmsave|*.rpmnew|*.rpmorig) ;;
		    (*.dpkg-save|*.dpkg-new|*.dpkg-orig) ;;
		    (*) sed -e '/^[[:space:]]*##/d;/^[[:space:]]*$/d' $f >> $t ;;
		esac
	    fi
	done
    fi
}

#
# We are configuring the installed package.
#
configure_init_postinst() { :
    #
    # At this point we want to ensure that our lines are added to the modules.conf (if necessary)
    # and that our preloads are added to the our modules or modprobe.preload file.
    #
    @WITH_KO_MODULES_FALSE@configure_modconf
    configure_preloads
    configure_netconfig
    configure_sock2path
    #
    # Note that init scripts are handled by debhelper additions to this script.
    #
}

subpkg=init

@mscript_postinst@

